                                          FontFamily="NotoSemiBold"
                                          IsVisible="{Binding NoobligatorioApple}"/>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}"
                                          IsVisible="{Binding NoobligatorioApple}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_calendario_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
                            <DatePicker Grid.Column="1"
                                                             FontSize="12"
                                                             Margin="0,0,5,0"
                                                             BackgroundColor="Transparent"
                                                             WidthRequest="250"
                                                             Format="dd/MM/yyyy"
                                                             HeightRequest="35"
                                                             TextColor="{StaticResource TextoEntrada}"
                                                             Date="{Binding EntFechaNacimientoUsu, Mode=TwoWay}"/>
                        </Grid>
                    </Frame>

                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          Text="{x:Static resources:AppResources.ProfesionAst}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoSemiBold"
                                          IsVisible="{Binding NoobligatorioApple}"/>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}"
                                          IsVisible="{Binding NoobligatorioApple}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_profesion_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
                            <Picker HeightRequest="35"
                                                         Grid.Column="1"
                                                         FontSize="12"
                                                         Title="{x:Static resources:AppResources.seleccionar}"
                                                         Margin="0,0,5,0"
                                                         WidthRequest="250"
                                                         BackgroundColor="Transparent"
                                                         TitleColor="{StaticResource PlaceHolderEntrada}"
                                                         TextColor="{StaticResource TextoEntrada}"
                                                         ItemsSource="{Binding ListaProfesionUsu,  Mode=TwoWay}"
                                                         ItemDisplayBinding="{Binding Descripcion,  Mode=TwoWay}"
                                                         SelectedItem="{Binding SelectProfesionUsu}"/>
                        </Grid>
                    </Frame>

                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          Text="{x:Static resources:AppResources.SectorEconomicoAst}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoSemiBold"
                                          IsVisible="{Binding NoobligatorioApple}"/>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}"
                                          IsVisible="{Binding NoobligatorioApple}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_portafolio_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>

                            <Picker HeightRequest="35"
                                                         Grid.Column="1"
                                                         FontSize="12"
                                                         Title="{x:Static resources:AppResources.seleccionar}"
                                                         TitleColor="{StaticResource PlaceHolderEntrada}"
                                                         TextColor="{StaticResource TextoEntrada}"
                                                         Margin="0,0,5,0"
                                                         BackgroundColor="Transparent"
                                                         WidthRequest="250"
                                                         ItemsSource="{Binding ListaSectorEcoUsu,  Mode=TwoWay}"
                                                         ItemDisplayBinding="{Binding Descripcion , Mode=TwoWay}"
                                                         SelectedItem="{Binding SelectSectorEcoUsu}"/>
                        </Grid>
                    </Frame>

                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          Text="{x:Static resources:AppResources.PaisRecidenciaAst}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          IsVisible="{Binding NoobligatorioApple}"
                                          FontFamily="NotoSemiBold"/>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          IsVisible="{Binding NoobligatorioApple}"
                                          Style="{StaticResource FRegistroGeneral}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_pais_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
                            <Picker HeightRequest="35"
                                                         Grid.Column="1"
                                                         FontSize="12"
                                                         Title="{x:Static resources:AppResources.seleccionar}"
                                                         TitleColor="{StaticResource PlaceHolderEntrada}"
                                                         TextColor="{StaticResource TextoEntrada}"
                                                         Margin="0,0,5,0"
                                                         BackgroundColor="Transparent"
                                                         WidthRequest="250"
                                                         ItemsSource="{Binding ListaPaisUsu, Mode=TwoWay}"
                                                         ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                                         SelectedItem="{Binding SelectPaisUsu}"/>
                        </Grid>
                    </Frame>

                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          Text="{x:Static resources:AppResources.ciudadRecintoAst}"
                                          IsVisible="{Binding NoobligatorioApple}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoSemiBold"/>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          IsVisible="{Binding NoobligatorioApple}"
                                          Style="{StaticResource FRegistroGeneral}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_pin_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
                            <Picker HeightRequest="35"
                                                         Grid.Column="1"
                                                         FontSize="12"
                                                         Title="{x:Static resources:AppResources.seleccionar}"
                                                         TitleColor="{StaticResource PlaceHolderEntrada}"
                                                         TextColor="{StaticResource TextoEntrada}"
                                                         Margin="0,0,5,0"
                                                         BackgroundColor="Transparent"
                                                         WidthRequest="250"
                                                         ItemsSource="{Binding ListaCiudadRecintoUsu, Mode=TwoWay}"
                                                         ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                                         SelectedItem="{Binding SelectCiudadUsu}"/>
                        </Grid>
                    </Frame>

                    <Grid Margin="0,30,0,0"
                                         ColumnDefinitions="*, Auto">
                        <StackLayout Grid.Column="0"
                                                       HorizontalOptions="Fill"
                                                       VerticalOptions="Start">
                            <Label FontSize="25"
                                                        Margin="0,0,0,0"
                                                        Padding="0"
                                                        Text="{x:Static resources:AppResources.registra}"
                                                        TextColor="{StaticResource TextoEntrada}"
                                                        FontFamily="NotoBold"/>

                            <Label FontSize="25"
                                                        Margin="0,0,0,15"
                                                        Padding="0"
                                                        Text="{x:Static resources:AppResources.tuEmpresa}"
                                                        TextColor="{StaticResource TextoEntrada}"
                                                        FontFamily="NotoBold"/>
                        </StackLayout>

                        <Image Grid.Column="1"
                                                 IsVisible="{Binding FormUsuario}"
                                                 Source="ic_mas_relleno.png"
                                                 WidthRequest="40"
                                                 Margin="10,0,5,0"
                                                 HorizontalOptions="End"
                                                 VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer  Command="{Binding Form_Usuario}"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Grid.Column="1"
                                                 IsVisible="{Binding FormEmpresa}"
                                                 Source="ic_menos_relleno.png"
                                                 WidthRequest="40"
                                                 Margin="10,0,5,0"
                                                 HorizontalOptions="End"
                                                 VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer  Command="{Binding Form_Empresa}"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>

                </StackLayout>

                <StackLayout Padding="15,5,15,0"
                                         IsVisible="{Binding FormEmpresa, Mode=OneWay}">
                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          Text="{x:Static resources:AppResources.nombreEmpresaAst}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoSemiBold"/>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_user_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
