                                                        PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                                        Text="{Binding EntIdUsu, Mode=TwoWay}"
                                                        Style="{StaticResource ERegistroGeneralTexto}"/>
                        </Grid>
                    </Frame>

                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          Text="{x:Static resources:AppResources.celular}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoSemiBold"/>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_telefono_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
                            <Entry HeightRequest="35"
                                                        Grid.Column="1"
                                                        BackgroundColor="Transparent"
                                                        Placeholder="{x:Static resources:AppResources.celular}"
                                                        TextColor="{StaticResource TextoEntrada}"
                                                        PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                                        Text="{Binding EntCelularUsu, Mode=TwoWay}"
                                                        Style="{StaticResource ERegistroGeneralTextoNumerico}"/>
                        </Grid>
                    </Frame>

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Grid.Column="0"
                                                 FontSize="11"
                                                 HorizontalOptions="Fill"
                                                 VerticalOptions="Center"
                                                 Margin="3,20,15,5"
