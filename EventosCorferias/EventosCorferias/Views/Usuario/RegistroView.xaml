                                                                     Text="{x:Static resources:AppResources.politicaDeTratamientoDeDatos}"
                                                                     FontFamily="NotoBold"
                                                                     TextColor="{StaticResource TextoEntrada}"
                                                                     TextDecorations="Underline"
                                                                     FontSize="12">
                                        <Span.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Politicas}"/>
