                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_identificacion_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
                            <Entry HeightRequest="35"
                                                        Grid.Column="1"
                                                        Placeholder="{x:Static resources:AppResources.NumeroIdEmpresaAst}"
