                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
                            <Entry HeightRequest="35"
                                                        Grid.Column="1"
                                                        BackgroundColor="Transparent"
                                                        Placeholder="{x:Static resources:AppResources.telefonoAst}"
                                                        TextColor="{StaticResource TextoEntrada}"
                                                        PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                                        Text="{Binding EntTelEmpr, Mode=TwoWay}"
                                                        Style="{StaticResource ERegistroGeneralTexto}"/>
                        </Grid>
                    </Frame>

                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          TextColor="{StaticResource TextoEntrada}"
