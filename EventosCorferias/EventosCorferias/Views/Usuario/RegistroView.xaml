                                                                     Text="{x:Static resources:AppResources.terminosYCondiciones}"
                                                                     FontFamily="NotoBold"
                                                                     TextColor="{StaticResource TextoEntrada}"
                                                                     TextDecorations="Underline"
                                                                     FontSize="12">
                                        <Span.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Terminos}"/>
                                        </Span.GestureRecognizers>
                                    </Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
