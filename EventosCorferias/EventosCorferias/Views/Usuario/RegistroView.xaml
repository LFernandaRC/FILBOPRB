                                                 TextColor="{StaticResource TextoEntrada}"
                                                 FontFamily="NotoSemiBold"/>

                        <ImageButton Grid.Column="1"
                                                       Source="ic_admiracion_obscuro.png"
                                                       WidthRequest="20"
                                                       Margin="10,0,5,0"
                                                       HorizontalOptions="End"
                                                       VerticalOptions="Center"
                                                       Command="{Binding Notificacion_clave}"/>
                    </Grid>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_correo_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
