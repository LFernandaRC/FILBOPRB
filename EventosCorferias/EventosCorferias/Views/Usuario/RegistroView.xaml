<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Usuario.RegistroView"
             xmlns:controls="clr-namespace:EventosCorferias.Controls"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             Title="RegistroView"
             BackgroundColor="White">
    <Grid BackgroundColor="White">
        <ScrollView VerticalOptions="Fill"
                          BackgroundColor="White">
            <StackLayout BackgroundColor="White">
                <ImageButton Source="ic_flecha_registro.png"
                                         HorizontalOptions="Start"
                                         WidthRequest="35"
                                         Padding="5"
                                         Margin="20,0,0,10"
                                         Command="{Binding Regresar}"
                                         BackgroundColor="Transparent"/>
                <StackLayout Padding="15,5,15,0">
                    <Image Source="img_registro_cabeza.png"
                                          WidthRequest="150"
                                          HorizontalOptions="Start"/>
                    <Label FontSize="25"
                                          HorizontalOptions="Start"
                                          Margin="0,20,0,0"
                                          Padding="0"
                                          Text="{x:Static resources:AppResources.uneteA}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoBold"/>
                    <Label FontSize="25"
                                          HorizontalOptions="Start"
                                          Margin="0,0,0,15"
                                          Padding="0"
                                          Text="{x:Static resources:AppResources.nuestraExperiencia}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoBold"/>
                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          Text="{x:Static resources:AppResources.NombreCompletoAst}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoSemiBold"/>
                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_perfil_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
                            <Entry HeightRequest="35"
                                                        x:Name="Entry1"
                                                        Grid.Column="1"
                                                        BackgroundColor="Transparent"
                                                        Placeholder="{x:Static resources:AppResources.NombreCompletoAst}"
                                                        TextColor="{StaticResource TextoEntrada}"
                                                        PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                                        Text="{Binding EntNombreUsu, Mode=TwoWay}"
                                                        Style="{StaticResource ERegistroGeneralTexto}"/>
                        </Grid>
                    </Frame>

                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          Text="{x:Static resources:AppResources.TipoDocumentoAst}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoSemiBold" IsVisible="{Binding NoobligatorioApple}"/>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}" IsVisible="{Binding NoobligatorioApple}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                                        Source="ic_identificacion_obscuro.png"
                                                        WidthRequest="20"
                                                        Margin="10,0,5,0"
                                                        HorizontalOptions="Start"/>
                            <Picker HeightRequest="35"
                                                         Grid.Column="1"
                                                         FontSize="12"
                                                         Title="{x:Static resources:AppResources.seleccionar}"
                                                         TitleColor="{StaticResource PlaceHolderEntrada}"
                                                         TextColor="{StaticResource TextoEntrada}"
                                                         Margin="0,0,5,0"
                                                         BackgroundColor="Transparent"
                                                         WidthRequest="250"
                                                         ItemsSource="{Binding ListaTipoIdUsu, Mode=TwoWay}"
                                                         ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                                         SelectedItem="{Binding SelectTipoIdUsu}"/>
                        </Grid>
                    </Frame>

                    <Label FontSize="11"
                                          HorizontalOptions="Start"
                                          Margin="3,20,15,5"
                                          Text="{x:Static resources:AppResources.NumeroDocumentoAst}"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontFamily="NotoSemiBold" IsVisible="{Binding NoobligatorioApple}"/>

                    <Frame BorderColor="{StaticResource BordeEntrada}"
                                          BackgroundColor="{StaticResource FondoEntrada}"
                                          Style="{StaticResource FRegistroGeneral}"
