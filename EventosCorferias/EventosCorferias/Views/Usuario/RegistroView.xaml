                                                 Padding="0"
                                                 TextColor="{StaticResource TextoEntrada}"
                                                 HorizontalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="2"
                                                                     Text="{x:Static resources:AppResources.aceptoLos}"
                                                                     FontSize="12"
                                                                     TextColor="{StaticResource TextoEntrada}"
