<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Usuario.PerfilMenuView"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             Title="PerfilMenuView"
             BackgroundColor="White">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal"
                     Spacing="0"
                     VerticalOptions="Center"
                     BackgroundColor="Transparent">
            <Image Grid.Column="0"
                   Source="menu.png"
                   WidthRequest="30"
                   Margin="0,0,20,0"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"
                   IsVisible="{OnPlatform iOS=false, Android=false, WinUI=false}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AbrirMenu}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image Grid.Column="0"
                   Source="{Binding ImagenSplash}"
                   WidthRequest="30"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"/>
            <StackLayout Spacing="0"
                         VerticalOptions="Center"
                         Margin="10,0,0,0">
                <Label Grid.Column="2"
                       Grid.Row="0"
                       FontSize="9"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{x:Static resources:AppResources.Hola}"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoRegular"/>
                <Label Grid.Column="2"
                       Grid.Row="1"
                       FontSize="13"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{Binding NombreCompletoPerfil}"
                       MaxLines="1"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoBold"/>
            </StackLayout>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="0"
                        BackgroundColor="White"
                        Margin="0,1,0,50">
                <VerticalStackLayout Spacing="0"
                                     Padding="0,0,0,50"
                                     HorizontalOptions="Fill"
                                     VerticalOptions="Center">
                    <!--IMAGEN DE PERFIL-->
                    <Frame
                        IsClippedToBounds="True"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Margin="10,30,0,20"
                        Padding="-10"
                        BackgroundColor="White"
                        CornerRadius="80"
                        HeightRequest="160"
                        WidthRequest="160"
                        HasShadow="False">
                        <Image Source="{Binding FotoGaleria}"
                               Aspect="AspectFill"/>
                    </Frame>
                    <!--INFORMACION DEL PERFIL-->
                    <Grid Margin="20,20,25,0"
                          HorizontalOptions="Start"
                          ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="ic_perfil_obscuro.png"/>
                        <Label Grid.Column="1"
                               FontFamily="NotoBold"
                               TextColor="{StaticResource TextoGeneral}"
                               FontSize="16"
                               Text="{Binding EntNombreUsu}"/>
                    </Grid>
                    <Grid Margin="20,0,25,20"
                          HorizontalOptions="Start"
                          ColumnSpacing="20">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Edit_Perfil}"/>
                        </Grid.GestureRecognizers>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"/>
                        <Label Grid.Column="1"
                               Padding="0"
                               Margin="0,0,0,0"
                               Text="{x:Static resources:AppResources.editarPerfil}"
                               FontFamily="NotoBold"
                               TextColor="{StaticResource TextoGeneral}"
                               FontSize="11"/>
                    </Grid>

                    <StackLayout Margin="0"
                                 Spacing="0"
                                 Padding="0">
                        <Grid Margin="0,10,0,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image
                                Grid.Row="0"
                                Grid.Column="0"
                                Source="ic_identificacion_obscuro.png"
                                WidthRequest="18"
                                Margin="10,0,5,0"/>
                            <Label Grid.Row="0"
                                   Grid.ColumnSpan="2"
                                   Grid.Column="1"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.tiponNumeroIdentificacion}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EnTipoIdUsuS}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="2"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntIdUsu}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_correo_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.correoElectronico}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntCorreoUsu}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_telefono_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.telefonoCelular}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntCelularUsu}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_calendario_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.fechaNacimiento}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding FechaNacimiento}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_pin_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.ciudadRecinto}"></Label>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntCiudadUsuS}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_pais_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.paisResidencia}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntPaisS}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_portafolio_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.sectorEconomico}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntSectorEcoUsuS}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_profesion_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.profesion}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntProfesionUsuS}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_login_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.cuentasVinculadas}"></Label>
                        </Grid>

                        <Grid Margin="50,20,25,0"
                              Padding="0,0,20,0"
                              ColumnSpacing="-10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                   Source="ic_arroba_relleno.png"
                                   WidthRequest="30"
                                   Margin="0,0,5,0"
                                   HorizontalOptions="Start"/>
                            <Label Text="{Binding EntCorreoUsu}"
                                   FontSize="16"
                                   FontFamily="NotoSemiBold"
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Grid.Column="1"/>
                        </Grid>

                        <Grid Margin="50,15,25,0"
                              Padding="0,0,20,0"
                              IsVisible="{Binding Facebook}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                   Source="ic_facebook_relleno.png"
                                   WidthRequest="30"
                                   Margin="0,0,5,0"
                                   HorizontalOptions="Start"/>
                            <Label Text="Facebook"
                                   FontSize="16"
                                   FontFamily="NotoSemiBold"
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Grid.Column="1"/>
                        </Grid>

                        <Grid Margin="50,15,25,0"
                              Padding="0,0,20,0"
                              IsVisible="{Binding Google}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                   Source="ic_google_relleno.png"
                                   WidthRequest="30"
                                   Margin="0,0,5,0"
                                   HorizontalOptions="Start"/>
                            <Label Text="Google"
                                   FontSize="16"
                                   FontFamily="NotoSemiBold"
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Grid.Column="1"/>
                        </Grid>

                        <Grid Margin="50,15,25,0"
                              Padding="0,0,20,0"
                              IsVisible="{Binding Apple}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                   Source="ic_apple_relleno.png"
                                   WidthRequest="27"
                                   Margin="0,0,5,0"
                                   HorizontalOptions="Start"/>
                            <Label Text="Apple"
                                   FontSize="16"
                                   FontFamily="NotoSemiBold"
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Grid.Column="1"></Label>
                        </Grid>

                        <Label  Margin="0,15,0,0"
                                Padding="50,0,20,0"
                                Text="{x:Static resources:AppResources.CerrarSesion}"
                                HorizontalOptions="Start"
                                TextColor="{StaticResource TextoGeneral}"
                                FontSize="14"
                                TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Cerrar_Sesion}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <Grid Margin="15,20,0,20"
                          RowSpacing="0"
                          ColumnSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0"
                               Grid.Row="0"
                               FontSize="25"
                               TextColor="{StaticResource TextoGeneral}"
                               HorizontalOptions="Start"
                               Margin="0"
                               Padding="0"
                               Text="{x:Static resources:AppResources.informacion}"
                               FontFamily="NotoBold"/>
                        <Label Grid.Column="0"
                               Grid.Row="1"
                               FontSize="25"
                               TextColor="{StaticResource TextoGeneral}"
                               HorizontalOptions="Start"
                               Margin="0"
                               Padding="0"
                               Text="{x:Static resources:AppResources.deLaEmpresa}"
                               FontFamily="NotoBold"/>

                        <ImageButton x:Name="Button1"
                                     IsVisible="{Binding FormEmpreMas}"
                                     Grid.Column="1"
                                     Grid.RowSpan="2"
                                     Source="ic_menos_relleno.png"
                                     WidthRequest="35"
                                     Margin="5,0,5,0"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Command="{Binding Button_Form}"
                                     ClassId="1"
                                     CommandParameter="{x:Reference Button1}"/>

                        <ImageButton x:Name="Button2"
                                     IsVisible="{Binding FormEmpreMenos}"
                                     Grid.Column="1"
                                     Grid.RowSpan="2"
                                     Source="ic_mas_relleno.png"
                                     WidthRequest="35"
                                     Margin="5,0,5,0"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Command="{Binding Button_Form}"
                                     ClassId="2"
                                     CommandParameter="{x:Reference Button2}"/>
                    </Grid>

                    <!--INFORMACION DE LA EMPRESA-->

                    <StackLayout Spacing="0"
                                 Margin="0,0,0,0"
                                 Padding="0"
                                 IsVisible="{Binding FormEmpreMas}">
                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_perfil_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.nombreEmpresa}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntNombreEmpr}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_identificacion_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.noIdentificacionEmpresa}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntIdEmpr}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_telefono_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"
                                   VerticalOptions="Start"/>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                </Grid>
                                <Label Grid.Column="0"
                                       Grid.Row="0"
                                       TextColor="{StaticResource TextoGeneral}"
                                       FontSize="11"
                                       FontFamily="NotoSemiBold"
                                       Text="{x:Static resources:AppResources.telefono}"/>
                                <Label Grid.Column="1"
                                       Grid.Row="0"
                                       TextColor="{StaticResource TextoGeneral}"
                                       FontSize="11"
                                       FontFamily="NotoSemiBold"
                                       Text="{x:Static resources:AppResources.pais}"/>
                                <Label Grid.Column="2"
                                       Grid.Row="0"
                                       TextColor="{StaticResource TextoGeneral}"
                                       FontSize="11"
                                       FontFamily="NotoSemiBold"
                                       Text="{x:Static resources:AppResources.area}"/>
                                <Label Grid.Column="0"
                                       Grid.Row="1"
                                       TextColor="{StaticResource TextoGeneral}"
                                       FontFamily="NotoBold"
                                       FontSize="16"
                                       Margin="0,20,0,0"
                                       Text="{Binding EntTelEmpr}"/>
                                <Label Grid.Column="1"
                                       Grid.Row="1"
                                       TextColor="{StaticResource TextoGeneral}"
                                       FontFamily="NotoBold"
                                       FontSize="16"
                                       Margin="0,20,0,0"
                                       Text="{Binding EntTelPaisEmpr}"/>
                                <Label Grid.Column="2"
                                       Grid.Row="1"
                                       TextColor="{StaticResource TextoGeneral}"
                                       FontFamily="NotoBold"
                                       FontSize="16"
                                       Margin="0,20,0,0"
                                       Text="{Binding EntTelAreaEmpr}"/>
                            </Grid>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_pais_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.pais}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntPaisempreS}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_pin_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.ciudad}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntCiudadEmpreS}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_direccion_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.direccion}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntDireccionEmpr}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_profesion_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.cargo}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntCargoEmpr}"/>
                        </Grid>

                        <Grid Margin="0,20,25,0"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                                   Source="ic_codigopostal_obscuro.png"
                                   WidthRequest="18"
                                   Margin="10,0,5,0"/>
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   FontSize="11"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   Text="{x:Static resources:AppResources.codigoPostal}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NotoBold"
                                   TextColor="{StaticResource TextoGeneral}"
                                   FontSize="16"
                                   Text="{Binding EntCodPostalEmpr}"/>
                        </Grid>
                    </StackLayout>
                </VerticalStackLayout>
            </ScrollView>
            <Grid BackgroundColor="{StaticResource FondomMenuInfe}"
                  Margin="0,0,0,-60"
                  VerticalOptions="End"
                  HorizontalOptions="Fill"
                  HeightRequest="70">
            </Grid>
            <Grid Grid.Row="0"
                  BackgroundColor="{StaticResource FondomMenuInfe}"
                  VerticalOptions="End"
                  HorizontalOptions="Fill"
                  ColumnSpacing="5"
                  Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Frame Grid.Column="{Binding GridNotificaciones}"
            BackgroundColor="{StaticResource FondoNotificaMenuInfe}"
            Padding="1"
            CornerRadius="10"
            HasShadow="False"
            BorderColor="{StaticResource BorderNotificaMenuInfe}"
            IsVisible="{Binding VerNotificicaciones}"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="30,0,0,0">
                    <Label Text="{Binding CantidadNotificaciones}"
                FontSize="11"
                FontFamily="NotoRegular"
                TextColor="{StaticResource TextNotificaMenuInfe}"
                WidthRequest="20"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"/>
                </Frame>
                <Image x:Name="Menu1"
                       Grid.Column="0"
                       WidthRequest="25"
                       Source="{Binding Icon1}"
                       ClassId="{Binding Icon1Class}"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Menu1}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                              CommandParameter="{x:Reference Menu1}"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Menu2"
                       Grid.Column="1"
                       WidthRequest="25"
                       Source="{Binding Icon2}"
                       ClassId="{Binding Icon2Class}"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Menu2}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                              CommandParameter="{x:Reference Menu2}"/>
                    </Image.GestureRecognizers>
                </Image>
                <BoxView Grid.Column="2"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         WidthRequest="1"
                         HeightRequest="25"
                         Color="Red"/>
                <Image x:Name="Menu3"
                       Grid.Column="3"
                       WidthRequest="25"
                       Source="{Binding Icon3}"
                       ClassId="{Binding Icon3Class}"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Menu3}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                              CommandParameter="{x:Reference Menu3}"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Menu4"
                       Grid.Column="4"
                       WidthRequest="25"
                       Source="{Binding Icon4}"
                       ClassId="{Binding Icon4Class}"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Menu4}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                              CommandParameter="{x:Reference Menu4}"/>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
            <Frame Grid.Row="0"
                   VerticalOptions="End"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"
                   Padding="0"
                   HasShadow="False"
                   BorderColor="{StaticResource BordeIconoPrin}"
                   BackgroundColor="{StaticResource FondoIconoPrin}"
                   CornerRadius="27"
                   WidthRequest="58"
                   HeightRequest="58">
                <Image Source="{Binding ImagenSplash}"
                       HeightRequest="40"
                       WidthRequest="40"
                       Aspect="AspectFill"
                       Margin="8">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrHome}"/>
                    </Image.GestureRecognizers>
                </Image>
            </Frame>
            <Grid BackgroundColor="{StaticResource FondoLoder}"
                  VerticalOptions="Fill"
                  HorizontalOptions="Fill"
                  Margin="-20,-60"
                  IsVisible="{Binding IsBusy}">
                <ActivityIndicator IsRunning="true"
                                   Color="{StaticResource IconoLoder}"
                                   Margin="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>