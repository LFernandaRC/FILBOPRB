                                   Grid.Column="1"
                                   FontSize="14"
                                   TextColor="{Binding ColorParametrizable}"
                                   HorizontalOptions="Center"
                                   TextDecorations="Underline"
                                   LineHeight="1"
                                   FontFamily="NotoRegular"
                                   HorizontalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding UrlSucesoLink}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
