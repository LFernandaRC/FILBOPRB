<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Suceso.DetalleExpositorView"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             Title="DetalleExpositorView"
             BackgroundColor="White">
    <NavigationPage.TitleView>
        <Label Text="{x:Static resources:AppResources.detalleExpositor}"
               Style="{StaticResource LMenuSup}"
               TextColor="{StaticResource ColorTextoMenSup}"/>
    </NavigationPage.TitleView>
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollView Padding="0,0,0,50">
            <StackLayout>
                <Frame BackgroundColor="{StaticResource FondoTarjetaTitulos}"
                       BorderColor="{StaticResource BordeTitulos}"
                       Margin="20,20,20,10"
                       Padding="0"
                       CornerRadius="20"
                       HasShadow="False">
                    <StackLayout Margin="0,0,0,0"
                                 Padding="0,0,0,0"
                                 Spacing="0">
                        <ContentView Grid.Column="0"
                                     HeightRequest="300"
                                     Margin="0"
                                     BackgroundColor="Transparent">
                            <Frame  IsClippedToBounds="True"
                                    Padding="0"
                                    Margin="15"
                                    CornerRadius="15"
                                    BackgroundColor="Transparent"
                                    HasShadow="False">
                                <ImageButton BackgroundColor="White"
                                             Source="{Binding ImagenLogo}"
                                             Aspect="AspectFit"
                                             Margin="0"
                                             Command="{Binding PlayImg}"/>
                            </Frame>
                        </ContentView>
                        <Grid BackgroundColor="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                            </Grid.RowDefinitions>
                            <Label Text="{Binding NombreExpositor}"
                                   FontSize="16"
                                   FontFamily="NotoBold"
                                   Padding="20,0,0,0"
                                   TextColor="{StaticResource TextoGeneralTitulos}"
                                   VerticalOptions="Center"
                                   Margin="0,0,0,0"/>
                            <StackLayout Grid.Column="1"
                                         Spacing="10"
                                         Padding="0"
                                         BackgroundColor="Transparent"
                                         HorizontalOptions="End"
                                         VerticalOptions="Start"
                                         Orientation="Horizontal">
                                <ImageButton Source="ic_compartir_relleno"
                                             WidthRequest="35"
                                             Margin="0"
                                             BackgroundColor="Transparent"
                                             Padding="3"
                                             Command="{Binding BtnCompartir}"/>
                                <ImageButton HorizontalOptions="End"
                                             VerticalOptions="Start"
                                             Source="{Binding ImagenFav}"
                                             WidthRequest="35"
                                             Margin="0,0,10,0"
                                             BackgroundColor="Transparent"
                                             Padding="3"
                                             Command="{Binding FavActualizar}"/>
                            </StackLayout>
                        </Grid>
                        <StackLayout Padding="20,10,20,0">
                            <Grid RowSpacing="0"
                                  Margin="0,5,0,5"
                                  IsVisible="{Binding IconStan}"
                                  ColumnSpacing="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_mapa_obscuro"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="1"
                                       FontSize="11"
                                       Margin="0"
                                       Padding="0"
                                       VerticalOptions="Center"
                                       Text="{Binding Pabellon}"
                                       FontFamily="NotoRegular"
                                       TextColor="{StaticResource TextoGeneralTitulos}"/>
                            </Grid>

                            <Grid RowSpacing="0"
                                  Margin="0,5,0,5"
                                  IsVisible="{Binding IconUrl}"
                                  ColumnSpacing="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_web_obscuro"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="1"
                                       FontSize="11"
                                       Margin="0"
                                       LineHeight="0"
                                       Padding="0"
                                       VerticalOptions="Center"
                                       MaxLines="2"
                                       Text="{Binding UrlTextExpo}"
                                       FontFamily="NotoRegular"
                                       TextDecorations="Underline"
                                       TextColor="{StaticResource TextoGeneralTitulos}"
                                       LineBreakMode="MiddleTruncation">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding UrlExpositorLink}"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                            <Grid RowSpacing="0"
                                  Margin="0,5,0,5"
                                  IsVisible="{Binding IconCorreo}"
                                  ColumnSpacing="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_correo_obscuro"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="1"
                                       FontSize="11"
                                       Margin="0"
                                       LineHeight="0"
                                       Padding="0"
                                       VerticalOptions="Center"
                                       Text="{Binding CorreoExpositor}"
                                       FontFamily="NotoRegular"
                                       TextDecorations="Underline"
                                       TextColor="{StaticResource TextoGeneralTitulos}"/>
                            </Grid>
                            <Grid Margin="0,10,0,0"
                                  IsVisible="{Binding SiguenosEn}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="{x:Static resources:AppResources.SiguenosEn}"
                                       FontSize="10"
                                       FontFamily="NotoRegular"
                                       TextColor="{StaticResource TextoGeneralTitulos}"/>
                                <CollectionView Grid.Column="1"
                                                SelectionMode="Single"
                                                SelectedItem="{Binding SelectedRedSocial, Mode=TwoWay}"
                                                ItemsSource="{Binding ImagenesRedSuceso}"
                                                BackgroundColor="Transparent"
                                                ItemsLayout="HorizontalList"
                                                HeightRequest="40">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,0"
                                                  Padding="0">
                                                <Frame IsClippedToBounds="True"
                                                       Margin="5,0,0,5"
                                                       Padding="0"
                                                       CornerRadius="0"
                                                       HasShadow="False"
                                                       BackgroundColor="Transparent">
                                                    <Image Source="{Binding Url}"
                                                           Aspect="AspectFit"
                                                           WidthRequest="30"
                                                           HeightRequest="30"
                                                           BackgroundColor="Transparent"
                                                           VerticalOptions="Start"
                                                           HorizontalOptions="Start"/>
                                                </Frame>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </Grid>
                        </StackLayout>
                        <Label Padding="20,0,20,0"
                               Text="{x:Static resources:AppResources.perfilDelExpositor}"
                               Margin="0,20,0,0"
                               FontSize="16"
                               FontFamily="NotoBold"
                               TextColor="{StaticResource TextoGeneralTitulos}"/>
                        <Label Padding="20,0,20,0"
                               Margin="0,10,0,30"
                               Text="{Binding DescripcionExpositor}"
                               FontSize="14"
                               FontFamily="NotoRegular"
                               TextColor="{StaticResource TextoGeneralTitulos}"/>
                    </StackLayout>
                </Frame>
                <BoxView HeightRequest="40"
                         BackgroundColor="Transparent"/>
            </StackLayout>
        </ScrollView>
        <Grid BackgroundColor="{StaticResource FondomMenuInfe}"
              Margin="0,0,0,-60"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              HeightRequest="70">
        </Grid>
        <Grid Grid.Row="0"
              BackgroundColor="{StaticResource FondomMenuInfe}"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              ColumnSpacing="5"
              Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="{Binding GridNotificaciones}"
            BackgroundColor="{StaticResource FondoNotificaMenuInfe}"
            Padding="1"
            CornerRadius="10"
            HasShadow="False"
            BorderColor="{StaticResource BorderNotificaMenuInfe}"
            IsVisible="{Binding VerNotificicaciones}"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="30,0,0,0">
                <Label Text="{Binding CantidadNotificaciones}"
                FontSize="11"
                FontFamily="NotoRegular"
                TextColor="{StaticResource TextNotificaMenuInfe}"
                WidthRequest="20"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"/>
            </Frame>
            <Image x:Name="Menu1"
                   Grid.Column="0"
                   WidthRequest="25"
                   Source="{Binding Icon1}"
                   ClassId="{Binding Icon1Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu1}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu1}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu2"
                   Grid.Column="1"
                   WidthRequest="25"
                   Source="{Binding Icon2}"
                   ClassId="{Binding Icon2Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu2}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu2}"/>
                </Image.GestureRecognizers>
            </Image>
            <BoxView Grid.Column="2"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     WidthRequest="1"
                     HeightRequest="25"
                     Color="Red"/>
            <Image x:Name="Menu3"
                   Grid.Column="3"
                   WidthRequest="25"
                   Source="{Binding Icon3}"
                   ClassId="{Binding Icon3Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu3}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu3}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu4"
                   Grid.Column="4"
                   WidthRequest="25"
                   Source="{Binding Icon4}"
                   ClassId="{Binding Icon4Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu4}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu4}"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>
        <Frame Grid.Row="0"
               VerticalOptions="End"
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               Padding="0"
               HasShadow="False"
               BorderColor="{StaticResource BordeIconoPrin}"
               BackgroundColor="{StaticResource FondoIconoPrin}"
               CornerRadius="27"
               WidthRequest="58"
               HeightRequest="58">
            <Image Source="{Binding ImagenSplash}"
                   HeightRequest="40"
                   WidthRequest="40"
                   Aspect="AspectFill"
                   Margin="8">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrHome}"/>
                </Image.GestureRecognizers>
            </Image>
        </Frame>
        <Grid BackgroundColor="{StaticResource FondoLoder}"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"
              Margin="-20,-60"
              IsVisible="{Binding IsBusy}">
            <ActivityIndicator IsRunning="true"
                               Color="{StaticResource IconoLoder}"
                               Margin="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>