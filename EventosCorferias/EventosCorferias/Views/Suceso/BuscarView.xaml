<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Suceso.BuscarView"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             Title="BuscarView"
             BackgroundColor="White">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal"
                     Spacing="0"
                     VerticalOptions="Center"
                     BackgroundColor="Transparent">
            <Image Grid.Column="0"
                   Source="menu.png"
                   WidthRequest="30"
                   Margin="0,0,20,0"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"
                   IsVisible="{OnPlatform iOS=false, Android=false, WinUI=false}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AbrirMenu}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image Grid.Column="0"
                   Source="{Binding ImagenSplash}"
                   WidthRequest="30"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"/>
            <StackLayout Spacing="0"
                         VerticalOptions="Center"
                         Margin="10,0,0,0">
                <Label Grid.Column="2"
                       Grid.Row="0"
                       FontSize="9"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{x:Static resources:AppResources.Hola}"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoRegular"/>
                <Label Grid.Column="2"
                       Grid.Row="1"
                       FontSize="13"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{Binding NombreCompletoPerfil}"
                       MaxLines="1"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoBold"/>
            </StackLayout>
        </StackLayout>
    </NavigationPage.TitleView>
    <Grid BackgroundColor="Transparent"
          VerticalOptions="Fill" RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame Padding="0"
                     Margin="0"
               HasShadow="False"
                     BackgroundColor="White">
            <StackLayout Spacing="0"
                               BackgroundColor="White">
                <Frame Padding="0"
                             Margin="0"
                       HasShadow="False"
                             BackgroundColor="White">
                    <StackLayout Margin="0"
                                       Padding="10,10,10,5"
                                       BackgroundColor="White"
                                       Spacing="0">
                        <Grid ColumnSpacing="10"
                                    Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="35"/>
                            </Grid.ColumnDefinitions>

                            <!-- Picker con Flecha -->
                            <Frame HasShadow="False"
                                         Grid.Column="0"
                                         Style="{StaticResource FRegistroGeneral}"
                                         BorderColor="{StaticResource BordeEntrada}"
                                         BackgroundColor="{StaticResource FondoEntrada}"
                                         IsVisible="{Binding FlechaModulo}">
                                <Grid Padding="3"
                                            ColumnSpacing="0">
                                    <Picker x:Name="PickerRutaBusqueda"
                                                  Title="{x:Static resources:AppResources.rutaDeBusqueda}"
                                                  TitleColor="{StaticResource PlaceHolderEntrada}"
                                                  TextColor="{StaticResource TextoEntrada}"
                                                  Margin="10,0,0,0"
                                                  BackgroundColor="Transparent"
                                                  FontSize="12"
                                                  FontFamily="NotoMedium"
                                                  VerticalOptions="Center"
                                                  ItemsSource="{Binding ListaModulo, Mode=TwoWay}"
                                                  ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                                  SelectedItem="{Binding SelectModulo}"
                                                  IsEnabled="{Binding BloquearCampo}"/>
                                    <Image Grid.Column="0"
                                                 Source="ic_flechaabajo_obscuro"
                                                 WidthRequest="18"
                                                 HeightRequest="18"
                                                 HorizontalOptions="End"
                                                 VerticalOptions="Center"
                                                 Margin="3,6,9,6"
                                                 BackgroundColor="Transparent"/>
                                </Grid>
                            </Frame>

                            <!-- Picker con Cerrar -->
                            <Frame HasShadow="False"
                                         Grid.Column="0"
                                         Style="{StaticResource FRegistroGeneral}"
                                         BorderColor="{StaticResource BordeEntrada}"
                                         BackgroundColor="{StaticResource FondoEntrada}"
                                         IsVisible="{Binding EquisModulo}"
                                         HeightRequest="40">
                                <Grid Padding="3"
                                            ColumnSpacing="0">
                                    <Picker x:Name="PickerRutaBusquedaDos"
                                                  Title="{x:Static resources:AppResources.rutaDeBusqueda}"
                                                  TitleColor="{StaticResource PlaceHolderEntrada}"
                                                  TextColor="{StaticResource TextoEntrada}"
                                                  Margin="10,0,0,0"
                                                  BackgroundColor="Transparent"
                                                  FontSize="12"
                                                  FontFamily="NotoMedium"
                                                  VerticalOptions="Center"
                                                  ItemsSource="{Binding ListaModulo, Mode=TwoWay}"
                                                  ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                                  SelectedItem="{Binding SelectModulo}"
                                                  IsEnabled="{Binding BloquearCampo}"/>
                                    <ImageButton Grid.Column="0"
                                                       Source="ic_cerrar_obscuro2.png"
                                                       WidthRequest="18"
                                                       HeightRequest="18"
                                                       HorizontalOptions="End"
                                                       VerticalOptions="Center"
                                                       Margin="0,0,5,0"
                                                       Padding="2"
                                                       BackgroundColor="Transparent"
                                                       Command="{Binding LimpiarModulo}"/>
                                </Grid>
                            </Frame>


                            <!-- Botón de ordenar -->
                            <ImageButton Grid.Column="1"
                                               CornerRadius="18"
                                               HorizontalOptions="End"
                                               WidthRequest="36"
                                               HeightRequest="36"
                                               BorderColor="{StaticResource BtnBoderIconoObscuro}"
                                               Source="ic_ordenar_claro.png"
                                               Padding="8"
                                               Command="{Binding OrdenarBusqueda}"
                                               BackgroundColor="{StaticResource BtnFondoIconoObscuro}"/>
                        </Grid>

                        <!-- Barra de búsqueda -->
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="35"/>
                            </Grid.ColumnDefinitions>
                            <Frame HasShadow="False"
                                         Grid.Column="0"
                                         Style="{StaticResource FRegistroGeneral}"
                                         BorderColor="{StaticResource BordeEntrada}"
                                         BackgroundColor="{StaticResource FondoEntrada}">
                                <Entry x:Name="EntryBsq"
                                             TextColor="{StaticResource TextoEntrada}"
                                             HorizontalTextAlignment="Start"
                                             MaxLength="50"
                                             FontFamily="NotoMedium"
                                             BackgroundColor="Transparent"
                                             Text="{Binding EntQueEstasBuscando, Mode=TwoWay}"
                                             Placeholder="{x:Static resources:AppResources.queEstasBuscando}"
                                             PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                             FontSize="12"
                                             Margin="5,10,5,10"/>
                            </Frame>

                            <!-- Botón de búsqueda -->
                            <ImageButton Grid.Column="1"
                                               CornerRadius="18"
                                               HorizontalOptions="End"
                                               WidthRequest="36"
                                               HeightRequest="36"
                                               BorderColor="{StaticResource BtnBordeIconoClaro}"
                                               Source="ic_buscar_obscuro.png"
                                               Padding="8"
                                               Command="{Binding BuscarBtn}"
                                               Clicked="ImageButton_Clicked"
                                               BackgroundColor="{StaticResource BtnFondoIconoClaro}"/>
                        </Grid>

                    </StackLayout>
                </Frame>
                <!-- Resultados de la búsqueda -->
                <Label TextColor="{StaticResource TextoGeneral}"
                             FontSize="12"
                             FontFamily="NotoRegular"
                             Margin="20,0,20,0"
                             IsVisible="True"
                             Text="{Binding CantidadBusqueda}"/>
            </StackLayout>
        </Frame>
        <CollectionView x:Name="producttablelist"
                        Grid.Row="1"
                        SelectionMode="None"
                        Margin="0,0,0,45"
                        VerticalOptions="Fill"
                        ItemsSource="{Binding ListaBusqueda}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid  Margin="0"
                           Padding="10"
                           BackgroundColor="White">
                        <Frame BorderColor="{StaticResource BordeTarjeta}"
                               IsClippedToBounds="True"
                               CornerRadius="15"
                               BackgroundColor="{StaticResource FondoTarjeta}"
                               Padding="1,1,1,1"
                               HasShadow="False">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Path=BindingContext.SeleccionarModuloCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}"
                                                      CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <StackLayout BackgroundColor="Transparent"
                                         InputTransparent="True">
                                <Grid ColumnDefinitions="45*,55*"
                                      InputTransparent="True">
                                    <!-- Imagen -->
                                    <Grid Grid.Column="0"
                                          InputTransparent="True">
                                        <Frame Padding="0"
                                               InputTransparent="True"
                                               CornerRadius="10"
                                               IsClippedToBounds="True"
                                               HasShadow="False"
                                               BackgroundColor="{StaticResource FondoImagen}">
                                            <Image Source="{Binding Imagen}"
                                                   InputTransparent="True"
                                                   Aspect="AspectFit"/>
                                        </Frame>
                                    </Grid>

                                    <!-- Información -->
                                    <StackLayout Grid.Column="1"
                                                 Spacing="0"
                                                 InputTransparent="True"
                                                 Padding="5,10,10,10">
                                        <Label FontSize="12"
                                               FontFamily="NotoBold"
                                               MaxLines="2"
                                               InputTransparent="True"
                                               LineBreakMode="TailTruncation"
                                               TextColor="{StaticResource TextoTarjetas}"
                                               IsVisible="{Binding VerModulo}"
                                               Text="{Binding NombreModulo}"/>

                                        <Label FontSize="12"
                                               FontFamily="NotoBold"
                                               MaxLines="3"
                                               InputTransparent="True"
                                               LineBreakMode="TailTruncation"
                                               TextColor="{StaticResource TextoTarjetas}"
                                               IsVisible="{Binding VerSuceso}"
                                               Text="{Binding Suceso}"/>

                                        <Label FontSize="14"
                                               FontFamily="NotoBold"
                                               Margin="0,10,0,0"
                                               MaxLines="3"
                                               InputTransparent="True"
                                               LineBreakMode="TailTruncation"
                                               TextColor="{StaticResource TextoTarjetas}"
                                               IsVisible="{Binding VerTiulo}"
                                               Text="{Binding Titulo}"/>

                                        <Label FontSize="11"
                                               FontFamily="NotoRegular"
                                               MaxLines="4"
                                               InputTransparent="True"
                                               LineBreakMode="TailTruncation"
                                               TextColor="{StaticResource TextoTarjetas}"
                                               IsVisible="{Binding VerDescri}"
                                               Text="{Binding Descripcion}"/>

                                        <!-- Fecha -->
                                        <Grid Margin="0,10,0,0"
                                              InputTransparent="True"
                                              ColumnDefinitions="30,*">
                                            <Image Grid.Column="0"
                                                   InputTransparent="True"
                                                   HorizontalOptions="Start"
                                                   VerticalOptions="Center"
                                                   Margin="0,0,5,0"
                                                   Source="ic_calendario_obscuro.png"/>
                                            <Label Grid.Column="1"
                                                   HorizontalOptions="Start"
                                                   VerticalOptions="Center"
                                                   Margin="0,0,5,0"
                                                   TextColor="{StaticResource TextoTarjetas}">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span LineHeight="0.8"
                                                              Text="{x:Static resources:AppResources.del}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text=" "
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text="{Binding DiaIn}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text=" "
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text="{x:Static resources:AppResources.de}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text=" "
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text="{Binding MesIn}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text=" "
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text="{Binding VigIn}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text=" "
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text="{x:Static resources:AppResources.al}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text=" "
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text="{Binding DiaFin}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text=" "
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text="{x:Static resources:AppResources.de}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text=" "
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text="{Binding MesFin}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text=" "
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                        <Span LineHeight="0.8"
                                                              Text="{Binding VigFin}"
                                                              FontSize="12"
                                                              FontFamily="NotoRegular"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </Grid>
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Grid BackgroundColor="{StaticResource FondomMenuInfe}"
              Margin="0,0,0,-60"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              Grid.Row="1"
              HeightRequest="70">
        </Grid>
        <Grid Grid.Row="1"
              BackgroundColor="{StaticResource FondomMenuInfe}"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              ColumnSpacing="5"
              Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="{Binding GridNotificaciones}"
            BackgroundColor="{StaticResource FondoNotificaMenuInfe}"
            Padding="1"
            CornerRadius="10"
            HasShadow="False"
            BorderColor="{StaticResource BorderNotificaMenuInfe}"
            IsVisible="{Binding VerNotificicaciones}"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="30,0,0,0">
                <Label Text="{Binding CantidadNotificaciones}"
                FontSize="11"
                FontFamily="NotoRegular"
                TextColor="{StaticResource TextNotificaMenuInfe}"
                WidthRequest="20"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"/>
            </Frame>
            <Image x:Name="Menu1"
                   Grid.Column="0"
                   WidthRequest="25"
                   Source="{Binding Icon1}"
                   ClassId="{Binding Icon1Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu1}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu1}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu2"
                   Grid.Column="1"
                   WidthRequest="25"
                   Source="{Binding Icon2}"
                   ClassId="{Binding Icon2Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu2}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu2}"/>
                </Image.GestureRecognizers>
            </Image>
            <BoxView Grid.Column="2"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     WidthRequest="1"
                     HeightRequest="25"
                     Color="Red"/>
            <Image x:Name="Menu3"
                   Grid.Column="3"
                   WidthRequest="25"
                   Source="{Binding Icon3}"
                   ClassId="{Binding Icon3Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu3}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu3}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu4"
                   Grid.Column="4"
                   WidthRequest="25"
                   Source="{Binding Icon4}"
                   ClassId="{Binding Icon4Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu4}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu4}"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>
        <Frame Grid.Row="1"
               VerticalOptions="End"
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               Padding="0"
               HasShadow="False"
               BorderColor="{StaticResource BordeIconoPrin}"
               BackgroundColor="{StaticResource FondoIconoPrin}"
               CornerRadius="27"
               WidthRequest="58"
               HeightRequest="58">
            <Image Source="{Binding ImagenSplash}"
                   HeightRequest="40"
                   WidthRequest="40"
                   Aspect="AspectFill"
                   Margin="8">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrHome}"/>
                </Image.GestureRecognizers>
            </Image>
        </Frame>
        <Grid BackgroundColor="{StaticResource FondoLoder}"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"
              Margin="-20,-60" Grid.RowSpan="2"
              IsVisible="{Binding IsBusy}">
            <ActivityIndicator IsRunning="true"
                               Color="{StaticResource IconoLoder}"
                               Margin="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </Grid>
    </Grid>

</ContentPage>