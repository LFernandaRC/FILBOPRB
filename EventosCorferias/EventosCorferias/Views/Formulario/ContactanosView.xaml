<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Formulario.ContactanosView"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             Title="ContactanosView"
             BackgroundColor="White">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal"
                     Spacing="0"
                     VerticalOptions="Center"
                     BackgroundColor="Transparent">
            <Image Grid.Column="0"
                   Source="menu.png"
                   WidthRequest="30"
                   Margin="0,0,20,0"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"
                   IsVisible="{OnPlatform iOS=true, Android=false, WinUI=false}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AbrirMenu}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image Grid.Column="0"
                   Source="{Binding ImagenSplash}"
                   WidthRequest="30"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"/>
            <StackLayout Spacing="0"
                         VerticalOptions="Center"
                         Margin="10,0,0,0">
                <Label Grid.Column="2"
                       Grid.Row="0"
                       FontSize="9"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{x:Static resources:AppResources.Hola}"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoRegular"/>
                <Label Grid.Column="2"
                       Grid.Row="1"
                       FontSize="13"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{Binding NombreCompletoPerfil}"
                       MaxLines="1"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoBold"/>
            </StackLayout>
        </StackLayout>
    </NavigationPage.TitleView>
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollView Margin="0,0,0,50" x:Name="MainScroll">
            <StackLayout Padding="20,15,20,15">
                <Label FontSize="28"
                       TextColor="{StaticResource TextoGeneral}"
                       HorizontalOptions="Start"
                       Margin="0,10,0,0"
                       FontFamily="NotoBold"
                       Text="{x:Static resources:AppResources.Contactanos}"/>
                <Grid ColumnDefinitions="*, Auto">
                    <Label Grid.Column="0"
                           FontSize="11"
                           HorizontalOptions="Fill"
                           VerticalOptions="Center"
                           Margin="3,20,15,5"
                           Text="{x:Static resources:AppResources.correoElectronicoAst}"
                           TextColor="{StaticResource TextoEntrada}"
                           FontFamily="NotoSemiBold"/>

                    <ImageButton Grid.Column="1"
                                 Source="ic_admiracion_obscuro.png"
                                 WidthRequest="20"
                                 Margin="10,0,5,0"
                                 HorizontalOptions="End"
                                 VerticalOptions="Center"
                                 Command="{Binding Notificacion_clave}"/>
                </Grid>
                <Frame Style="{StaticResource FRegistroGeneral}"
                       BorderColor="{StaticResource BordeEntrada}"
                       BackgroundColor="{StaticResource FondoEntrada}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="ic_correo_obscuro.png"
                               WidthRequest="20"
                               Margin="10,0,5,0"
                               HorizontalOptions="Start"/>
                        <Entry HeightRequest="35"
                               Grid.Column="1"
                               Placeholder="{x:Static resources:AppResources.correoElectronico}"
                               TextColor="{StaticResource TextoEntrada}"
                               PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                               Text="{Binding CorreoElectronico, Mode=TwoWay}"
                               Style="{StaticResource ERegistroGeneralTexto}"/>
                    </Grid>
                </Frame>

                <Label Grid.Column="0"
                       FontSize="11"
                       HorizontalOptions="Fill"
                       VerticalOptions="Center"
                       Margin="3,20,15,5"
                       TextColor="{StaticResource TextoEntrada}"
                       Text="{x:Static resources:AppResources.celular}"
                       FontFamily="NotoSemiBold"/>

                <Frame Style="{StaticResource FRegistroGeneral}"
                       BorderColor="{StaticResource BordeEntrada}"
                       BackgroundColor="{StaticResource FondoEntrada}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="ic_telefono_obscuro.png"
                               WidthRequest="20"
                               Margin="10,0,5,0"
                               HorizontalOptions="Start"/>
                        <Entry HeightRequest="35"
                               Grid.Column="1"
                               Placeholder="{x:Static resources:AppResources.celular}"
                               TextColor="{StaticResource TextoEntrada}"
                               PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                               Text="{Binding TelefonoCelular, Mode=TwoWay}"
                               Style="{StaticResource ERegistroGeneralTexto}"/>
                    </Grid>
                </Frame>

                <Label Grid.Column="0"
                       FontSize="11"
                       HorizontalOptions="Fill"
                       VerticalOptions="Center"
                       Margin="3,20,15,5"
                       TextColor="{StaticResource TextoEntrada}"
                       Text="{x:Static resources:AppResources.TipoContacto}"
                       FontFamily="NotoSemiBold"/>
                <Frame Style="{StaticResource FRegistroGeneral}"
                       BorderColor="{StaticResource BordeEntrada}"
                       BackgroundColor="{StaticResource FondoEntrada}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="ic_pais_obscuro.png"
                               WidthRequest="20"
                               Margin="10,0,5,0"
                               HorizontalOptions="Start"/>
                        <Picker HeightRequest="35"
                                Grid.Column="1"
                                FontSize="12"
                                Title="{x:Static resources:AppResources.seleccionar}"
                                TitleColor="{StaticResource PlaceHolderEntrada}"
                                TextColor="{StaticResource TextoEntrada}"
                                Margin="0,0,5,0"
                                BackgroundColor="Transparent"
                                ItemsSource="{Binding TipoContacto, Mode=TwoWay}"
                                ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                SelectedItem="{Binding SelectTipoContacto}"/>
                    </Grid>
                </Frame>
                <Label Grid.Column="0"
                       FontSize="11"
                       HorizontalOptions="Fill"
                       VerticalOptions="Center"
                       Margin="3,20,15,5"
                       TextColor="{StaticResource TextoEntrada}"
                       Text="{x:Static resources:AppResources.Asunto}"
                       FontFamily="NotoSemiBold"/>

                <Frame Style="{StaticResource FRegistroGeneral}"
                       BorderColor="{StaticResource BordeEntrada}"
                       BackgroundColor="{StaticResource FondoEntrada}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="ic_telefono_obscuro.png"
                               WidthRequest="20"
                               Margin="10,0,5,0"
                               HorizontalOptions="Start"/>
                        <Entry HeightRequest="35"
                               Grid.Column="1"
                               Text="{Binding Asunto}"
                               Placeholder="{x:Static resources:AppResources.Asunto}"
                               TextColor="{StaticResource TextoEntrada}"
                               PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                               Style="{StaticResource ERegistroGeneralTexto}"/>
                    </Grid>
                </Frame>
                <Label Grid.Column="0"
                       FontSize="11"
                       HorizontalOptions="Fill"
                       VerticalOptions="Center"
                       Margin="3,20,15,5"
                       TextColor="{StaticResource TextoEntrada}"
                       Text="{x:Static resources:AppResources.descripcion}"
                       FontFamily="NotoSemiBold"/>

                <Frame Style="{StaticResource FRegistroGeneral}"
                       BorderColor="{StaticResource BordeEntrada}"
                       BackgroundColor="{StaticResource FondoEntrada}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="ic_programacion_obscuro.png"
                               WidthRequest="20"
                               Margin="10,5,5,0"
                               VerticalOptions="Start"
                               HorizontalOptions="Start"/>
                        <Editor FontFamily="NotoRegular"
                                Focused="DescripcionEditor_Focused" 
                                x:Name="DescripcionEditor"
                                Grid.Column="1"
                                FontSize="12"
                                VerticalOptions="Start"
                                TextColor="{StaticResource TextoEntrada}"
                                PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                Placeholder="{x:Static resources:AppResources.descripcion}"
                                Margin="0,5,5,0"
                                BackgroundColor="Transparent"
                                MaxLength="500"
                                HeightRequest="80"
                                Text="{Binding Descripcion, Mode=TwoWay}"/>
                    </Grid>
                </Frame>
                <StackLayout Margin="0,30,0,30"
                             Orientation="Horizontal"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
                    <CheckBox HorizontalOptions="Center"
                              VerticalOptions="Center"
                              IsChecked="{Binding CheckTerminos}"
                              Color="Gray"
                              Margin="0,0,10,0"/>
                    <Label Text="{x:Static resources:AppResources.AceptoLa}"
                           FontSize="12"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="{StaticResource TextoEntrada}"
                           FontFamily="NotoRegular"/>
                    <Label Text=" "
                           FontSize="12"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="{StaticResource TextoEntrada}"
                           FontFamily="NotoRegular"/>
                    <Label Text="{x:Static resources:AppResources.politicaTrat}"
                           FontSize="12"
                           FontFamily="NotoSemiBold"
                           TextDecorations="Underline"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="{StaticResource TextoEntrada}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Politicas}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
                <Button Text="{x:Static resources:AppResources.Enviar}"
                        TextColor="{StaticResource BtnTextoObscuro}"
                        BorderColor="{StaticResource BtnBoderGeneralObscuro}"
                        Command="{Binding BtnEnviar}"
                        Style="{StaticResource BtnGeneral}"
                        Margin="0,20,0,0"
                        BackgroundColor="{StaticResource BtnFondoGeneralObscuro}"
                        IsVisible="{Binding VerBtnEnviarUno}"/>

                <Button Text="{x:Static resources:AppResources.Enviar}"
                        TextColor="{StaticResource BtnTextoObscuro}"
                        BorderColor="{StaticResource BtnBoderGeneralObscuro}"
                        Style="{StaticResource BtnGeneral}"
                        Margin="0,20,0,0"
                        BackgroundColor="{StaticResource BtnFondoGeneralObscuro}"
                        IsVisible="{Binding VerBtnEnviarDos}"
                        IsEnabled="True"/>
                <StackLayout BackgroundColor="White" HeightRequest="350"></StackLayout>
            </StackLayout>
        </ScrollView>
        <Grid BackgroundColor="{StaticResource FondomMenuInfe}"
              Margin="0,0,0,-60"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              HeightRequest="70">
        </Grid>
        <Grid Grid.Row="0"
              BackgroundColor="{StaticResource FondomMenuInfe}"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              ColumnSpacing="5"
              Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="{Binding GridNotificaciones}"
            BackgroundColor="{StaticResource FondoNotificaMenuInfe}"
            Padding="1"
            CornerRadius="10"
            HasShadow="False"
            BorderColor="{StaticResource BorderNotificaMenuInfe}"
            IsVisible="{Binding VerNotificicaciones}"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="30,0,0,0">
                <Label Text="{Binding CantidadNotificaciones}"
                FontSize="11"
                FontFamily="NotoRegular"
                TextColor="{StaticResource TextNotificaMenuInfe}"
                WidthRequest="20"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"/>
            </Frame>
            <Image x:Name="Menu1"
                   Grid.Column="0"
                   WidthRequest="25"
                   Source="{Binding Icon1}"
                   ClassId="{Binding Icon1Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu1}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu1}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu2"
                   Grid.Column="1"
                   WidthRequest="25"
                   Source="{Binding Icon2}"
                   ClassId="{Binding Icon2Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu2}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu2}"/>
                </Image.GestureRecognizers>
            </Image>
            <BoxView Grid.Column="2"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     WidthRequest="1"
                     HeightRequest="25"
                     Color="Red"/>
            <Image x:Name="Menu3"
                   Grid.Column="3"
                   WidthRequest="25"
                   Source="{Binding Icon3}"
                   ClassId="{Binding Icon3Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu3}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu3}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu4"
                   Grid.Column="4"
                   WidthRequest="25"
                   Source="{Binding Icon4}"
                   ClassId="{Binding Icon4Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu4}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu4}"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>
        <Frame Grid.Row="0"
               VerticalOptions="End"
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               Padding="0"
               HasShadow="False"
               BorderColor="{StaticResource BordeIconoPrin}"
               BackgroundColor="{StaticResource FondoIconoPrin}"
               CornerRadius="27"
               WidthRequest="58"
               HeightRequest="58">
            <Image Source="{Binding ImagenSplash}"
                   HeightRequest="40"
                   WidthRequest="40"
                   Aspect="AspectFill"
                   Margin="8">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrHome}"/>
                </Image.GestureRecognizers>
            </Image>
        </Frame>
        <Grid BackgroundColor="{StaticResource FondoLoder}"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"
              Margin="-20,-60"
              IsVisible="{Binding IsBusy}">
            <ActivityIndicator IsRunning="true"
                               Color="{StaticResource IconoLoder}"
                               Margin="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>