<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Suceso.DetalleContenidoView"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             BackgroundColor="White"
             Title="DetalleContenidoView">
    <NavigationPage.TitleView>
        <Label  Text="{x:Static resources:AppResources.detalleContenido}"
                TextColor="{StaticResource ColorTextoMenSup}"
                Style="{StaticResource LMenuSup}"/>
    </NavigationPage.TitleView>
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollView  Margin="0,0,0,0">
            <StackLayout BackgroundColor="White">
                <Frame BackgroundColor="{StaticResource FondoTarjetaTitulos}"
                       BorderColor="{StaticResource BordeTitulos}"
                       Margin="20,20,20,10"
                       HasShadow="False"
                       Padding="0"
                       CornerRadius="20">
                    <StackLayout Margin="0,0,0,0"
                                 Spacing="0"
                                 Padding="0,0,0,0">
                        <ContentView Grid.Column="0"
                                     HeightRequest="300"
                                     Margin="0"
                                     BackgroundColor="Transparent">
                            <Frame  IsClippedToBounds="True"
                                    Padding="0"
                                    Margin="15"
                                    CornerRadius="15"
                                    BackgroundColor="Transparent"
                                    HasShadow="False">
                                <ImageButton BackgroundColor="White"
                                             Source="{Binding ImgPrincipal}"
                                             Aspect="AspectFit"
                                             Margin="0"
                                             Command="{Binding PlayImagen}"/>
                            </Frame>
                        </ContentView>
                        <Grid Padding="5,0,5,0"
                              BackgroundColor="Transparent"
                              ColumnSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Frame Grid.Column="0"
                                   BackgroundColor="{StaticResource BtnFondoGeneralObscuro}"
                                   BorderColor="{StaticResource BtnBoderGeneralObscuro}"
                                   Padding="0"
                                   Margin="0"
                                   HorizontalOptions="Fill"
                                   CornerRadius="15"
                                   HasShadow="False"
                                   IsVisible="{Binding VisibleAgenda}">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer  Command="{Binding PlayAgenda}"/>
                                </Frame.GestureRecognizers>
                                <StackLayout BackgroundColor="Transparent"
                                             Orientation="Horizontal"
                                             HorizontalOptions="Center"
                                             Spacing="5">
                                    <Image Source="ic_agenda_claro"
                                           BackgroundColor="Transparent"
                                           Margin="0"
                                           WidthRequest="20"
                                           HeightRequest="20"
                                           VerticalOptions="Center"/>
                                    <Label Text="{x:Static resources:AppResources.agenda}"
                                           FontSize="9"
                                           FontFamily="NotoLight"
                                           VerticalOptions="Center"
                                           HorizontalTextAlignment="Center"
                                           TextColor="{StaticResource BtnTextoObscuro}"/>
                                </StackLayout>
                            </Frame>
                            <Frame Grid.Column="1"
                                   BackgroundColor="{StaticResource BtnFondoGeneralObscuro}"
                                   BorderColor="{StaticResource BtnBoderGeneralObscuro}"
                                   Padding="10,5,10,5"
                                   Margin="0"
                                   HorizontalOptions="Fill"
                                   CornerRadius="15"
                                   HasShadow="False"
                                   IsVisible="{Binding VisibleSitios}">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer  Command="{Binding PlaySitios}"/>
                                </Frame.GestureRecognizers>
                                <StackLayout BackgroundColor="Transparent"
                                             Orientation="Horizontal"
                                             HorizontalOptions="Center"
                                             Spacing="5">
                                    <Image Source="ic_sitio_claro"
                                           BackgroundColor="Transparent"
                                           Margin="0"
                                           WidthRequest="18"
                                           HeightRequest="18"
                                           VerticalOptions="Center"/>
                                    <Label Text="{x:Static resources:AppResources.sitios}"
                                           FontSize="9"
                                           FontFamily="NotoLight"
                                           VerticalOptions="Center"
                                           HorizontalTextAlignment="Center"
                                           TextColor="{StaticResource BtnTextoObscuro}"/>
                                </StackLayout>
                            </Frame>
                            <Frame Grid.Column="2"
                                   BackgroundColor="{StaticResource BtnFondoGeneralObscuro}"
                                   BorderColor="{StaticResource BtnBoderGeneralObscuro}"
                                   Padding="10,5,10,5"
                                   Margin="0"
                                   HorizontalOptions="Fill"
                                   CornerRadius="15"
                                   HasShadow="False"
                                   IsVisible="{Binding VisiblePlay}">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer  Command="{Binding PlayContenidos}"/>
                                </Frame.GestureRecognizers>
                                <StackLayout BackgroundColor="Transparent"
                                             Orientation="Horizontal"
                                             HorizontalOptions="Center"
                                             Spacing="5">
                                    <Image Source="ic_play_claro"
                                           BackgroundColor="Transparent"
                                           Margin="0"
                                           WidthRequest="16"
                                           HeightRequest="16"
                                           VerticalOptions="Center"/>
                                    <Label Text="{x:Static resources:AppResources.reproducir}"
                                           FontSize="9"
                                           FontFamily="NotoLight"
                                           VerticalOptions="Center"
                                           HorizontalTextAlignment="Center"
                                           TextColor="{StaticResource BtnTextoObscuro}"/>
                                </StackLayout>
                            </Frame>
                        </Grid>
                        <Grid Margin="10,10,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Column="0"
                                         VerticalOptions="Center">
                                <Label Text="{Binding Titulo}"
                                       FontSize="16"
                                       FontFamily="NotoBold"
                                       TextColor="{StaticResource TextoGeneralTitulos}"/>
                                <Label Text="{Binding Categoria}"
                                       FontSize="12"
                                       FontFamily="NotoSemiBold"
                                       TextColor="{StaticResource TextoGeneralTitulos}"/>
                            </StackLayout>
                            <StackLayout Grid.Column="1"
                                         BackgroundColor="Transparent"
                                         Spacing="10"
                                         Margin="0,0,10,0"
                                         Padding="0"
                                         HorizontalOptions="End"
                                         VerticalOptions="Start"
                                         Orientation="Horizontal">
                                <ImageButton Source="ic_compartir_relleno"
                                             WidthRequest="35"
                                             Margin="0"
                                             BackgroundColor="Transparent"
                                             Padding="3"
                                             Command="{Binding BtnCompartir}"/>
                                <ImageButton Source="{Binding ImagenFav}"
                                             WidthRequest="35"
                                             HeightRequest="35"
                                             Margin="0"
                                             BackgroundColor="Transparent"
                                             Padding="3"
                                             Command="{Binding FavActualizar}"/>
                            </StackLayout>
                        </Grid>
                        <Label Margin="10,0,10,20"
                             Text="{Binding FechaContexto}"
                             FontSize="14"
                             FontFamily="NotoRegular"
                             TextColor="{StaticResource TextoGeneralTitulos}"/>
                        <Label Margin="10,0,10,30"
                               TextType="Html"
                               Text="{Binding Contenido}"
                               FontSize="14"
                               FontFamily="NotoRegular"
                               TextColor="{StaticResource TextoGeneralTitulos}"/>
                    </StackLayout>
                </Frame>
                <BoxView BackgroundColor="Transparent"
                         HeightRequest="100"/>
            </StackLayout>
        </ScrollView>
        <Grid BackgroundColor="{StaticResource FondomMenuInfe}"
              Margin="0,0,0,-60"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              HeightRequest="70">
        </Grid>
        <Grid Grid.Row="0"
              BackgroundColor="{StaticResource FondomMenuInfe}"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              ColumnSpacing="5"
              Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="{Binding GridNotificaciones}"
            BackgroundColor="{StaticResource FondoNotificaMenuInfe}"
            Padding="1"
            CornerRadius="10"
            HasShadow="False"
            BorderColor="{StaticResource BorderNotificaMenuInfe}"
            IsVisible="{Binding VerNotificicaciones}"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="30,0,0,0">
                <Label Text="{Binding CantidadNotificaciones}"
                FontSize="11"
                FontFamily="NotoRegular"
                TextColor="{StaticResource TextNotificaMenuInfe}"
                WidthRequest="20"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"/>
            </Frame>
            <Image x:Name="Menu1"
                   Grid.Column="0"
                   WidthRequest="25"
                   Source="{Binding Icon1}"
                   ClassId="{Binding Icon1Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu1}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu1}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu2"
                   Grid.Column="1"
                   WidthRequest="25"
                   Source="{Binding Icon2}"
                   ClassId="{Binding Icon2Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu2}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu2}"/>
                </Image.GestureRecognizers>
            </Image>
            <BoxView Grid.Column="2"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     WidthRequest="1"
                     HeightRequest="25"
                     Color="Red"/>
            <Image x:Name="Menu3"
                   Grid.Column="3"
                   WidthRequest="25"
                   Source="{Binding Icon3}"
                   ClassId="{Binding Icon3Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu3}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu3}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu4"
                   Grid.Column="4"
                   WidthRequest="25"
                   Source="{Binding Icon4}"
                   ClassId="{Binding Icon4Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu4}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu4}"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>
        <Frame Grid.Row="0"
               VerticalOptions="End"
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               Padding="0"
               HasShadow="False"
               BorderColor="{StaticResource BordeIconoPrin}"
               BackgroundColor="{StaticResource FondoIconoPrin}"
               CornerRadius="27"
               WidthRequest="58"
               HeightRequest="58">
            <Image Source="{Binding ImagenSplash}"
                   HeightRequest="40"
                   WidthRequest="40"
                   Aspect="AspectFill"
                   Margin="8">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrHome}"/>
                </Image.GestureRecognizers>
            </Image>
        </Frame>
        <Grid BackgroundColor="{StaticResource FondoLoder}"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"
              Margin="-20,-60"
              IsVisible="{Binding IsBusy}">
            <ActivityIndicator IsRunning="true"
                               Color="{StaticResource IconoLoder}"
                               Margin="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>