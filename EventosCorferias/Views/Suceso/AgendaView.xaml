<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Usuario.AgendaView"
             xmlns:controls="clr-namespace:EventosCorferias.Controls"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             Title="AgendaView"
             BackgroundColor="White">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal"
                     Spacing="0"
                     VerticalOptions="Center"
                     BackgroundColor="Transparent">
            <Image Grid.Column="0"
                   Source="menu.png"
                   WidthRequest="30"
                   Margin="0,0,20,0"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"
                   IsVisible="{OnPlatform iOS=true, Android=false, WinUI=false}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AbrirMenu}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image Grid.Column="0"
                   Source="{Binding ImagenSplash}"
                   WidthRequest="30"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"/>
            <StackLayout Spacing="0"
                         VerticalOptions="Center"
                         Margin="10,0,0,0">
                <Label Grid.Column="2"
                       Grid.Row="0"
                       FontSize="9"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{x:Static resources:AppResources.Hola}"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoRegular"/>
                <Label Grid.Column="2"
                       Grid.Row="1"
                       FontSize="13"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{Binding NombreCompletoPerfil}"
                       MaxLines="1"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoBold"/>
            </StackLayout>
        </StackLayout>
    </NavigationPage.TitleView>
    <Grid BackgroundColor="White"
          RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <CollectionView x:Name="listAgenda"
                        SelectionMode="Single"
                        Margin="0,0,0,50"
                        ItemsSource="{Binding ListaAgenda}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="1"
                                 VerticalItemSpacing="0"
                                 HorizontalItemSpacing="0"/>
            </CollectionView.ItemsLayout>
            <CollectionView.Header>
                <StackLayout Spacing="0">
                    <StackLayout Margin="0"
                                 BackgroundColor="Transparent">
                        <Grid HeightRequest="35"
                              Padding="10,0,7,0"
                              Margin="0,20,0,5"
                              ColumnSpacing="5"
                              BackgroundColor="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Frame Grid.Column="0"
                                   Grid.Row="0"
                                   Style="{StaticResource FRegistroGeneral}"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   IsVisible="{Binding FlechaCategoria}">
                                <Grid Margin="0"
                                      Padding="3"
                                      RowSpacing="0"
                                      ColumnSpacing="0">
                                    <Image Grid.Column="0"
                                           Source="ic_flechaabajo_obscuro.png"
                                           WidthRequest="12"
                                           HeightRequest="12"
                                           HorizontalOptions="End"
                                           VerticalOptions="Center"
                                           BackgroundColor="Transparent"
                                           Margin="0,2,5,0"
                                           IsVisible="{Binding FlechaCategoria}"/>
                                    <Picker x:Name="pickerUno"
                                            HeightRequest="35"
                                            Grid.Column="0"
                                            FontSize="11"
                                            Title="{Binding Filtro1}"
                                            FontFamily="NotoMedium"
                                            TitleColor="{StaticResource PlaceHolderEntrada}"
                                            TextColor="{StaticResource TextoEntrada}"
                                            Margin="0,0,5,0"
                                            BackgroundColor="Transparent"
                                            ItemsSource="{Binding ListaCategoria, Mode=TwoWay}"
                                            ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                            SelectedItem="{Binding SelectCategoria}"/>
                                </Grid>
                            </Frame>

                            <Frame Grid.Column="0"
                                   Grid.Row="0"
                                   Style="{StaticResource FRegistroGeneral}"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   IsVisible="{Binding EquisCategoria}">
                                <Grid Margin="0"
                                      Padding="3"
                                      RowSpacing="0"
                                      ColumnSpacing="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="26"/>
                                    </Grid.ColumnDefinitions>
                                    <Picker x:Name="pickerSeis"
                                            HeightRequest="35"
                                            Grid.Column="0"
                                            FontSize="11"
                                            Title="{Binding Filtro1}"
                                            FontFamily="NotoMedium"
                                            TitleColor="{StaticResource PlaceHolderEntrada}"
                                            TextColor="{StaticResource TextoEntrada}"
                                            Margin="0,0,5,0"
                                            BackgroundColor="Transparent"
                                            ItemsSource="{Binding ListaCategoria, Mode=TwoWay}"
                                            ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                            SelectedItem="{Binding SelectCategoria}"/>
                                    <ImageButton Grid.Column="1"
                                                 Source="ic_cerrar_obscuro2.png"
                                                 HeightRequest="40"
                                                 WidthRequest="13"
                                                 HorizontalOptions="End"
                                                 VerticalOptions="Center"
                                                 Margin="0,2,5,0"
                                                 BackgroundColor="Transparent"
                                                 Command="{Binding LimpiarCategoria}"/>
                                </Grid>
                            </Frame>

                            <Frame Grid.Column="1"
                                   Grid.Row="0"
                                   Style="{StaticResource FRegistroGeneral}"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   IsVisible="{Binding FlechaLugar}">
                                <Grid Margin="0"
                                      Padding="3"
                                      RowSpacing="0"
                                      ColumnSpacing="0">
                                    <Image Grid.Column="1"
                                           Source="ic_flechaabajo_obscuro.png"
                                           WidthRequest="12"
                                           HeightRequest="12"
                                           HorizontalOptions="End"
                                           VerticalOptions="Center"
                                           Margin="0,2,5,0"
                                           BackgroundColor="Transparent"
                                           IsVisible="{Binding FlechaCategoria}"/>
                                    <Picker x:Name="pickerDos"
                                            HeightRequest="35"
                                            Grid.Column="0"
                                            FontSize="11"
                                            Title="{Binding Filtro2}"
                                            FontFamily="NotoMedium"
                                            TitleColor="{StaticResource PlaceHolderEntrada}"
                                            TextColor="{StaticResource TextoEntrada}"
                                            Margin="0,0,5,0"
                                            BackgroundColor="Transparent"
                                            ItemsSource="{Binding ListaLugar, Mode=TwoWay}"
                                            ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                            SelectedItem="{Binding SelectLugar}"/>

                                </Grid>
                            </Frame>
                            <Frame Grid.Column="1"
                                   Grid.Row="0"
                                   Style="{StaticResource FRegistroGeneral}"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   IsVisible="{Binding EquisLugar}">
                                <Grid Margin="0"
                                      Padding="3"
                                      RowSpacing="0"
                                      ColumnSpacing="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="26"/>
                                    </Grid.ColumnDefinitions>
                                    <Picker x:Name="pickerSiete"
                                            HeightRequest="35"
                                            Grid.Column="0"
                                            FontSize="11"
                                            Title="{Binding Filtro2}"
                                            FontFamily="NotoMedium"
                                            TitleColor="{StaticResource PlaceHolderEntrada}"
                                            TextColor="{StaticResource TextoEntrada}"
                                            Margin="0,0,5,0"
                                            BackgroundColor="Transparent"
                                            ItemsSource="{Binding ListaLugar, Mode=TwoWay}"
                                            ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                            SelectedItem="{Binding SelectLugar}"/>
                                    <ImageButton Grid.Column="1"
                                                 Source="ic_cerrar_obscuro2.png"
                                                 HeightRequest="40"
                                                 WidthRequest="13"
                                                 HorizontalOptions="End"
                                                 VerticalOptions="Center"
                                                 Margin="0,2,5,0"
                                                 BackgroundColor="Transparent"
                                                 Command="{Binding LimpiarLugar}"/>
                                </Grid>
                            </Frame>
                        </Grid>

                        <Grid Padding="10,0,7,0"
                              Margin="0,0,0,5"
                              ColumnSpacing="10"
                              HeightRequest="35"
                              Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="35"/>
                            </Grid.ColumnDefinitions>
                            <Frame Grid.Column="0"
                                   Style="{StaticResource FRegistroGeneral}"
                                   CornerRadius="20"
                                   BackgroundColor="{StaticResource FondoEntrada}">
                                <Entry HeightRequest="35"
                                       BackgroundColor="Transparent"
                                       x:Name="filtroTres"
                                       FontFamily="NotoMedium"
                                       Placeholder="{Binding Filtro3}"
                                       TextColor="{StaticResource TextoEntrada}"
                                       PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                       Text="{Binding EntConferencista, Mode=TwoWay}"
                                       IsReadOnly="{Binding IsReadOnlyEntryConfe}"
                                       Margin="3,0,0,0"
                                       Style="{StaticResource ERegistroGeneralTexto}"
                                       Completed="EntryBsq_Completed"/>
                            </Frame>
                            <ImageButton Grid.Column="1"
                                         CornerRadius="18"
                                         HorizontalOptions="End"
                                         WidthRequest="34"
                                         HeightRequest="34"
                                         Margin="0"
                                         BorderColor="{StaticResource BtnBordeIconoClaro}"
                                         Source="ic_lupa_obscuro.png"
                                         Padding="8"
                                         Command="{Binding BuscarEntAgenda}"
                                         Clicked="EntryBsq_Completed"
                                         BackgroundColor="{StaticResource BtnFondoIconoClaro}"/>
                        </Grid>

                        <Grid Padding="10,0,7,0"
                              Margin="0,0,0,0"
                              ColumnSpacing="5"
                              HeightRequest="35">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>



                            <Frame x:Name="FrameCalendario"
                                   HasShadow="False"
                                   Grid.Column="0"
                                   Style="{StaticResource FRegistroGeneral}"
                                   CornerRadius="20"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   Padding="0"
                                   Margin="0"
                                   IsVisible="{Binding EquisCalendario}">
                                <Grid Margin="0"
                                      Padding="3"
                                      RowSpacing="0"
                                      ColumnSpacing="0"
                                      BackgroundColor="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="26"/>
                                    </Grid.ColumnDefinitions>

                                    <DatePicker x:Name="DatePickerCalendario"
                                                FontFamily="NotoMedium"
                                                Date="{Binding EntFechaBuscar, Mode=TwoWay}"
                                                TextColor="{StaticResource TextoEntrada}"
                                                Margin="10,0,0,0"
                                                BackgroundColor="Transparent"
                                                FontSize="12"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Fill"
                                                Format="dd/MM/yyyy"/>

                                    <ImageButton Grid.Column="1"
                                                 Source="ic_cerrar_obscuro2.png"
                                                 HeightRequest="40"
                                                 WidthRequest="13"
                                                 HorizontalOptions="End"
                                                 VerticalOptions="Center"
                                                 Margin="0,2,5,0"
                                                 BackgroundColor="Transparent"
                                                 Command="{Binding LimpiarCalendario}"/>
                                </Grid>
                            </Frame>

                            <Frame x:Name="FrameCalendarioIcono"
                                   HasShadow="False"
                                   Grid.Column="0"
                                   Style="{StaticResource FRegistroGeneral}"
                                   CornerRadius="20"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   Padding="0"
                                   Margin="0"
                                   IsVisible="{Binding FlechaCalendario}">
                                <Grid>
                                    <Label Text="{Binding Filtro4}"
                                           TextColor="{StaticResource PlaceHolderEntrada}"
                                           Margin="10,0,0,0"
                                           BackgroundColor="Transparent"
                                           FontSize="12"
                                           HorizontalOptions="Fill"
                                           VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                        </Label.GestureRecognizers>
                                    </Label>

                                    <Image Source="ic_calendario_obscuro.png"
                                           BackgroundColor="Transparent"
                                           HorizontalOptions="End"
                                           Margin="7">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <DatePicker x:Name="PickeCalen"
                                                FontFamily="NotoMedium"
                                                Date="{Binding EntFechaBuscar, Mode=TwoWay}"
                                                TextColor="Transparent"
                                                Opacity="0"
                                                Margin="5,0,0,0"
                                                BackgroundColor="Transparent"
                                                FontSize="12"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Fill"
                                                Format="dd/MM/yyyy"/>
                                </Grid>
                            </Frame>
                            <Frame Grid.Column="1"
                                   Grid.Row="0"
                                   Style="{StaticResource FRegistroGeneral}"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   IsVisible="{Binding FlechaFranja}">
                                <Grid Margin="0"
                                      Padding="3"
                                      RowSpacing="0"
                                      ColumnSpacing="0">
                                    <Image Grid.Column="1"
                                           Source="ic_flechaabajo_obscuro.png"
                                           WidthRequest="12"
                                           HeightRequest="12"
                                           HorizontalOptions="End"
                                           VerticalOptions="Center"
                                           Margin="0,2,5,0"
                                           BackgroundColor="Transparent"
                                           IsVisible="{Binding FlechaCategoria}"/>
                                    <Picker x:Name="pickerTres"
                                            HeightRequest="35"
                                            Grid.Column="1"
                                            FontSize="11"
                                            Title="{Binding Filtro5}"
                                            FontFamily="NotoMedium"
                                            TitleColor="{StaticResource PlaceHolderEntrada}"
                                            TextColor="{StaticResource TextoEntrada}"
                                            Margin="0,0,5,0"
                                            BackgroundColor="Transparent"
                                            ItemsSource="{Binding ListaFranja, Mode=TwoWay}"
                                            ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                            SelectedItem="{Binding SelectFranja}"/>
                                </Grid>
                            </Frame>

                            <Frame Grid.Column="1"
                                   Grid.Row="0"
                                   Style="{StaticResource FRegistroGeneral}"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   IsVisible="{Binding EquisFranja}">
                                <Grid Margin="0"
                                      Padding="3"
                                      RowSpacing="0"
                                      ColumnSpacing="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="26"/>
                                    </Grid.ColumnDefinitions>
                                    <Picker HeightRequest="35"
                                            Grid.Column="0"
                                            FontSize="11"
                                            Title="{Binding Filtro5}"
                                            FontFamily="NotoMedium"
                                            TitleColor="{StaticResource PlaceHolderEntrada}"
                                            TextColor="{StaticResource TextoEntrada}"
                                            Margin="0,0,5,0"
                                            BackgroundColor="Transparent"
                                            ItemsSource="{Binding ListaFranja, Mode=TwoWay}"
                                            ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                            SelectedItem="{Binding SelectFranja}"/>

                                    <ImageButton Grid.Column="1"
                                                 Source="ic_cerrar_obscuro2.png"
                                                 HeightRequest="40"
                                                 WidthRequest="13"
                                                 HorizontalOptions="End"
                                                 VerticalOptions="Center"
                                                 Margin="0,2,5,0"
                                                 BackgroundColor="Transparent"
                                                 Command="{Binding LimpiarFranja}"/>
                                </Grid>
                            </Frame>
                        </Grid>

                        <ImageButton CornerRadius="18"
                                     HorizontalOptions="End"
                                     WidthRequest="36"
                                     HeightRequest="36"
                                     Margin="0,5,7,0"
                                     BorderColor="{StaticResource BtnBoderIconoObscuro}"
                                     Source="ic_ordenar_claro.png"
                                     Padding="8"
                                     Command="{Binding OrdenarAgenda}"
                                     BackgroundColor="{StaticResource BtnFondoIconoObscuro}"/>
                    </StackLayout>
                    <Label TextColor="{StaticResource TextoGeneral}"
                           Text="{Binding CantidadAgenda}"
                           FontSize="12"
                           Margin="20,0,20,0"
                           FontFamily="NotoBold"/>
                    <Label TextColor="{StaticResource TextoGeneral}"
                           Text="{x:Static resources:AppResources.sujetoacambios}"
                           FontSize="10"
                           Margin="20,0,20,0"
                           FontFamily="NotoRegular"/>
                    <Label TextColor="{StaticResource TextoGeneral}"
                           Text="{x:Static resources:AppResources.EsteConferencistaNoCuentaAunConAgenda}"
                           FontSize="12"
                           Margin="20,0,20,0"
                           FontFamily="NotoRegular"
                           IsVisible="{Binding SinRegistros}"/>
                </StackLayout>
            </CollectionView.Header>
            <!--TERMINA CAMPOS DE BUSQUEDA-->
            <!--INICIA AGENDAS-->
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0"
                          Padding="10,10,8,10"
                          BackgroundColor="White">
                        <Frame
                            CornerRadius="15"
                            IsClippedToBounds="True"
                            Padding="0,0,0,0"
                            HasShadow="False"
                            BorderColor="{StaticResource BordeTarjeta}"
                            BackgroundColor="{StaticResource FondoTarjeta}"
                            InputTransparent="False">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Path=BindingContext.SeleccionarAgendaCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}"
                                                      CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid BackgroundColor="Transparent"
                                  Margin="0,0,0,0"
                                  Padding="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"/>
                                    <ColumnDefinition Width="0.6*"/>
                                </Grid.ColumnDefinitions>
                                <Frame Grid.Column="0"
                                       Margin="-10,-1,-1,-1"
                                       Padding="0,0,0,0"
                                       CornerRadius="25"
                                       HasShadow="False"
                                       IsClippedToBounds="True"
                                       BackgroundColor="Transparent"
                                       InputTransparent="True">
                                    <Image Margin="0"
                                           Source="{Binding Imagen}"
                                           Aspect="AspectFill"
                                           BackgroundColor="{StaticResource FondoImagen}"
                                           HeightRequest="170"/>
                                </Frame>
                                <StackLayout Grid.Column="1"
                                             Spacing="0"
                                             Padding="10,0,5,5"
                                             BackgroundColor="Transparent">
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label FontSize="11"
                                               HorizontalTextAlignment="Start"
                                               Margin="0,10,5,0"
                                               TextColor="{StaticResource TextoTarjetas}"
                                               Text="{Binding Titulo}"
                                               MaxLines="2"
                                               LineBreakMode="TailTruncation"
                                               FontFamily="NotoBold"/>
                                        <ImageButton Grid.Column="1"
                                                     Source="{Binding ImagenFav}"
                                                     HorizontalOptions="End"
                                                     VerticalOptions="Start"
                                                     Margin="0,8,5,0"
                                                     HeightRequest="30"
                                                     WidthRequest="30"
                                                     BackgroundColor="Transparent"
                                                     Padding="0,0,0,0"
                                                     Command="{Binding Path=BindingContext.FavButtonCommand,Source={x:Reference listAgenda},Mode=TwoWay}"
                                                     CommandParameter="{Binding .}"/>
                                    </Grid>
                                    <Label FontSize="11"
                                           FontFamily="NotoSemiBold"
                                           TextColor="{StaticResource TextoTarjetas}"
                                           Text="{Binding Categoria}"
                                           MaxLines="1"
                                           LineBreakMode="TailTruncation"/>
                                    <Label FontSize="10"
                                           FontFamily="NotoRegular"
                                           TextColor="{StaticResource TextoTarjetas}"
                                           MaxLines="3">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span LineHeight="1"
                                                      Text="{Binding DiaIn}"/>
                                                <Span LineHeight="1"
                                                      Text=" "/>
                                                <Span LineHeight="1"
                                                      Text="{x:Static resources:AppResources.de}"/>
                                                <Span LineHeight="1"
                                                      Text=" "/>
                                                <Span LineHeight="1"
                                                      Text="{Binding MesIn}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label FontSize="10"
                                           TextColor="{StaticResource TextoTarjetas}"
                                           MaxLines="1"
                                           FontFamily="NotoRegular">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span LineHeight="1"
                                                      Text="{Binding HoraInicio}"/>
                                                <Span LineHeight="1"
                                                      Text=" "/>
                                                <Span LineHeight="1"
                                                      Text="{x:Static resources:AppResources.a}"/>
                                                <Span LineHeight="1"
                                                      Text=" "/>
                                                <Span LineHeight="1"
                                                      Text="{Binding HoraFin}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Text="{Binding Lugar}"
                                           FontSize="10"
                                           TextColor="{StaticResource TextoTarjetas}"
                                           MaxLines="3"
                                           LineBreakMode="TailTruncation"
                                           FontFamily="NotoRegular"/>
                                    <Label Text="{x:Static resources:AppResources.zonaHorariaColombia}"
                                           FontSize="10"
                                           TextColor="{StaticResource TextoTarjetas}"
                                           MaxLines="3"
                                           LineBreakMode="TailTruncation"
                                           FontFamily="NotoRegular"/>
                                    <Label FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource TextoTarjetas}"
                                           Text="{Binding Estado}"
                                           MaxLines="1"
                                           HorizontalOptions="Center"
                                           FontFamily="NotoRegular"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.Footer>
                    <Label Margin="120"/>
            </CollectionView.Footer>
        </CollectionView>
        <!--TERMINA AGENDA-->
        <!--INICIA MENU INFERIOR-->
        <Grid BackgroundColor="{StaticResource FondomMenuInfe}"
              Margin="0,0,0,-60"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              HeightRequest="70">
        </Grid>
        <Grid Grid.Row="0"
              BackgroundColor="{StaticResource FondomMenuInfe}"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              ColumnSpacing="5"
              Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="{Binding GridNotificaciones}"
            BackgroundColor="{StaticResource FondoNotificaMenuInfe}"
            Padding="1"
            CornerRadius="10"
            HasShadow="False"
            BorderColor="{StaticResource BorderNotificaMenuInfe}"
            IsVisible="{Binding VerNotificicaciones}"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="30,0,0,0">
                <Label Text="{Binding CantidadNotificaciones}"
                FontSize="11"
                FontFamily="NotoRegular"
                TextColor="{StaticResource TextNotificaMenuInfe}"
                WidthRequest="20"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"/>
            </Frame>
            <Image x:Name="Menu1"
                   Grid.Column="0"
                   WidthRequest="25"
                   Source="{Binding Icon1}"
                   ClassId="{Binding Icon1Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu1}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu1}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu2"
                   Grid.Column="1"
                   WidthRequest="25"
                   Source="{Binding Icon2}"
                   ClassId="{Binding Icon2Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu2}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu2}"/>
                </Image.GestureRecognizers>
            </Image>
            <BoxView Grid.Column="2"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     WidthRequest="1"
                     HeightRequest="25"
                     Color="Red"/>
            <Image x:Name="Menu3"
                   Grid.Column="3"
                   WidthRequest="25"
                   Source="{Binding Icon3}"
                   ClassId="{Binding Icon3Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu3}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu3}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu4"
                   Grid.Column="4"
                   WidthRequest="25"
                   Source="{Binding Icon4}"
                   ClassId="{Binding Icon4Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu4}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu4}"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>
        <Frame Grid.Row="0"
               VerticalOptions="End"
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               Padding="0"
               HasShadow="False"
               BorderColor="{StaticResource BordeIconoPrin}"
               BackgroundColor="{StaticResource FondoIconoPrin}"
               CornerRadius="27"
               WidthRequest="58"
               HeightRequest="58">
            <Image Source="{Binding ImagenSplash}"
                   HeightRequest="40"
                   WidthRequest="40"
                   Aspect="AspectFill"
