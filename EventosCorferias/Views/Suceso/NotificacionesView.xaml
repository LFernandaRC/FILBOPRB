<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Usuario.NotificacionesView"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             Title="NotificacionesView"
             BackgroundColor="White">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal"
                     Spacing="0"
                     VerticalOptions="Center"
                     BackgroundColor="Transparent">
            <Image Grid.Column="0"
                   Source="menu.png"
                   WidthRequest="30"
                   Margin="0,0,20,0"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"
                   IsVisible="{OnPlatform iOS=true, Android=false, WinUI=false}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AbrirMenu}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image Grid.Column="0"
                   Source="{Binding ImagenSplash}"
                   WidthRequest="30"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"/>
            <StackLayout Spacing="0"
                         VerticalOptions="Center"
                         Margin="10,0,0,0">
                <Label Grid.Column="2"
                       Grid.Row="0"
                       FontSize="9"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{x:Static resources:AppResources.Hola}"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoRegular"/>
                <Label Grid.Column="2"
                       Grid.Row="1"
                       FontSize="13"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Text="{Binding NombreCompletoPerfil}"
                       MaxLines="1"
                       TextColor="{StaticResource ColorTextoMenSup}"
                       FontFamily="NotoBold"/>
            </StackLayout>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid BackgroundColor="White"
              RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <CollectionView x:Name="listAgenda"
                            SelectionMode="None"
                            Margin="0,0,0,0"
                            ItemsSource="{Binding ListaAgenda}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="1"
                                     VerticalItemSpacing="0"
                                     HorizontalItemSpacing="0"/>
                </CollectionView.ItemsLayout>
                <CollectionView.Header>
                    <StackLayout Spacing="0">
                        <StackLayout Margin="0,20,0,0"
                                     BackgroundColor="White">
                            <Grid Padding="15,0,15,0"
                                  Margin="0"
                                  HeightRequest="35">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Frame  Grid.Column="0"
                                        Style="{StaticResource FRegistroGeneral}"
                                        BorderColor="{StaticResource BordeEntrada}"
                                        BackgroundColor="{StaticResource FondoEntrada}"
                                        IsVisible="{Binding EquisCalendario}">
                                    <Grid Margin="0"
                                          Padding="3"
                                          RowSpacing="0"
                                          ColumnSpacing="0"
                                          BackgroundColor="Transparent">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="26"/>
                                        </Grid.ColumnDefinitions>
                                        <DatePicker Grid.Column="0"
                                                    x:Name="DatePickerCalendario"
                                                    FontSize="12"
                                                    FontFamily="NotoMedium"
                                                    Margin="0,2,0,0"
                                                    BackgroundColor="Transparent"
                                                    WidthRequest="210"
                                                    Format="dd/MM/yyyy"
                                                    HeightRequest="34"
                                                    TextColor="Black"
                                                    Date="{Binding EntFechaBuscar, Mode=TwoWay}"/>

                                        <ImageButton Grid.Column="1"
                                                     Source="ic_cerrar_obscuro2.png"
                                                     BackgroundColor="Transparent"
                                                     HorizontalOptions="Center"
                                                     VerticalOptions="Center"
                                                     HeightRequest="15"
                                                     Margin="0,0,12,0"
                                                     WidthRequest="15"
                                                     Padding="0"
                                                     Command="{Binding LimpiarCalendario}"/>
                                    </Grid>
                                </Frame>
                                <Frame Grid.Column="0"
                                       Style="{StaticResource FRegistroGeneral}"
                                       BorderColor="{StaticResource BordeEntrada}"
                                       BackgroundColor="{StaticResource FondoEntrada}"
                                       IsVisible="{Binding FlechaCalendario}">
                                    <Grid>
                                        <Label Text="YYYY/MM/DD"
                                               FontFamily="NotoSemiBold"
                                               TextColor="{StaticResource TextoEntrada}"
                                               Margin="10,0,0,0"
                                               FontSize="12"
                                               HorizontalOptions="Start"
                                               VerticalOptions="Center"/>
                                        <Image Source="ic_calendario_obscuro.png"
                                               BackgroundColor="Transparent"
                                               HorizontalOptions="End"
                                               VerticalOptions="Center"
                                               WidthRequest="20"
                                               Margin="0,0,12,0"/>
                                        <DatePicker Grid.Column="0"
                                                    x:Name="PickeCalen"
                                                    FontSize="12"
                                                    FontFamily="NotoMedium"
                                                    Margin="0,0,35,0"
                                                    BackgroundColor="Transparent"
                                                    TextColor="Transparent"
                                                    WidthRequest="220"
                                                    HorizontalOptions="Center"
                                                    Format="dd/MM/yyyy"
                                                    HeightRequest="35"
                                                    Date="{Binding EntFechaBuscar, Mode=TwoWay}"/>
                                    </Grid>
                                </Frame>
                                <ImageButton
                                    Grid.Column="1"
                                    CornerRadius="18"
                                    HorizontalOptions="End"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Margin="0"
                                    BorderColor="{StaticResource BtnBoderIconoObscuro}"
                                    Source="ic_ordenar_claro.png"
                                    Padding="8"
                                    Command="{Binding OrdenarAgenda}"
                                    BackgroundColor="{StaticResource BtnFondoIconoObscuro}"/>
                            </Grid>
                        </StackLayout>
                        <Label TextColor="{StaticResource TextoGeneral}"
                               Text="{Binding CantidadAgenda}"
                               FontSize="12"
                               Margin="20,10,20,5"
                               FontFamily="NotoBold"/>
                    </StackLayout>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0"
                              Padding="10"
                              BackgroundColor="White">
                            <Frame BackgroundColor="{StaticResource FondoTarjeta}"
                                   Margin="0,0,0,-1"
                                   Padding="1"
                                   CornerRadius="5"
                                   Style="{StaticResource FRegistroGeneral}"
                                   BorderColor="{StaticResource BordeTarjeta}"
                                   HasShadow="False">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.ItemSelectedCommandModulos,Source={x:Reference listAgenda}}"
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <Grid BackgroundColor="Transparent"
                                      Margin="0"
                                      Padding="0"
                                      RowSpacing="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0"
                                           Source="{Binding ImagenIcono}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           WidthRequest="45"
                                           HeightRequest="45"
                                           Margin="0,17,0,15"/>
                                    <StackLayout Grid.Column="1"
                                                 Spacing="0"
                                                 Margin="0,15,0,15">
                                        <Label Margin="0,0,0,5"
                                               TextColor="{StaticResource TextoTarjetas}"
                                               FontSize="10"
                                               FontFamily="NotoMedium">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding DiaIn}"/>
                                                    <Span Text=" "/>
                                                    <Span Text="{x:Static resources:AppResources.de}"/>
                                                    <Span Text=" "/>
                                                    <Span Text="{Binding MesIn}"/>
                                                    <Span Text=" "/>
                                                    <Span Text="{x:Static resources:AppResources.de}"/>
                                                    <Span Text=" "/>
                                                    <Span Text="{Binding Vigencia}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{Binding Titulo}"
                                               Margin="0,0,15,1"
                                               TextColor="{StaticResource TextoTarjetas}"
                                               FontSize="12"
                                               FontFamily="NotoBold"/>
                                        <Label Grid.Column="0"
                                               Text="{Binding Texto}"
                                               MaxLines="1"
                                               Margin="0,0,20,0"
                                               FontSize="10"
                                               FontFamily="NotoMedium"
                                               TextColor="{StaticResource TextoTarjetas}"
                                               LineBreakMode="TailTruncation"/>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.Footer>
                    <Label Margin="30"/>
                </CollectionView.Footer>
            </CollectionView>
            <ImageButton Source="ic_caneca_relleno.png"
                         VerticalOptions="End"
                         HorizontalOptions="Center"
                         WidthRequest="50"
                         HeightRequest="50"
                         Margin="0,0,0,90"
                         Command="{Binding BorrarNotificacion}"
                         BackgroundColor="White"/>
            <!--TERMINA NOTIFICACIONES-->
            <!--INICIA MENU INFERIOR-->
            <Grid BackgroundColor="{StaticResource FondomMenuInfe}"
                  Margin="0,0,0,-60"
                  VerticalOptions="End"
                  HorizontalOptions="Fill"
                  HeightRequest="70">
            </Grid>
            <Grid Grid.Row="0"
                  BackgroundColor="{StaticResource FondomMenuInfe}"
                  VerticalOptions="End"
                  HorizontalOptions="Fill"
                  ColumnSpacing="5"
                  Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Frame Grid.Column="{Binding GridNotificaciones}"
            BackgroundColor="{StaticResource FondoNotificaMenuInfe}"
            Padding="1"
            CornerRadius="10"
            HasShadow="False"
            BorderColor="{StaticResource BorderNotificaMenuInfe}"
            IsVisible="{Binding VerNotificicaciones}"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="30,0,0,0">
                    <Label Text="{Binding CantidadNotificaciones}"
                FontSize="11"
                FontFamily="NotoRegular"
                TextColor="{StaticResource TextNotificaMenuInfe}"
                WidthRequest="20"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"/>
                </Frame>
                <Image x:Name="Menu1"
                       Grid.Column="0"
                       WidthRequest="25"
                       Source="{Binding Icon1}"
                       ClassId="{Binding Icon1Class}"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Menu1}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                              CommandParameter="{x:Reference Menu1}"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Menu2"
                       Grid.Column="1"
                       WidthRequest="25"
                       Source="{Binding Icon2}"
                       ClassId="{Binding Icon2Class}"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Menu2}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                              CommandParameter="{x:Reference Menu2}"/>
                    </Image.GestureRecognizers>
                </Image>
                <BoxView Grid.Column="2"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         WidthRequest="1"
                         HeightRequest="25"
                         Color="Red"/>
                <Image x:Name="Menu3"
                       Grid.Column="3"
                       WidthRequest="25"
                       Source="{Binding Icon3}"
                       ClassId="{Binding Icon3Class}"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Menu3}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                              CommandParameter="{x:Reference Menu3}"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="Menu4"
                       Grid.Column="4"
                       WidthRequest="25"
                       Source="{Binding Icon4}"
                       ClassId="{Binding Icon4Class}"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Menu4}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                              CommandParameter="{x:Reference Menu4}"/>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
            <Frame Grid.Row="0"
                   VerticalOptions="End"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"
                   Padding="0"
                   HasShadow="False"
                   BorderColor="{StaticResource BordeIconoPrin}"
                   BackgroundColor="{StaticResource FondoIconoPrin}"
                   CornerRadius="27"
                   WidthRequest="58"
                   HeightRequest="58">
                <Image Source="{Binding ImagenSplash}"
                       HeightRequest="40"
                       WidthRequest="40"
                       Aspect="AspectFill"
                       Margin="8">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrHome}"/>
                    </Image.GestureRecognizers>
                </Image>
            </Frame>
            <Grid BackgroundColor="{StaticResource FondoLoder}"
                  VerticalOptions="Fill"
                  HorizontalOptions="Fill"
                  Margin="-20,-60"
                  IsVisible="{Binding IsBusy}">
                <ActivityIndicator IsRunning="true"
                                   Color="{StaticResource IconoLoder}"
                                   Margin="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
            </Grid>
        </Grid>
    </ContentPage.Content>

</ContentPage>