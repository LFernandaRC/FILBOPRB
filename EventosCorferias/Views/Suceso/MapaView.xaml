<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Suceso.MapaView"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             Title="MapaView"
             BackgroundColor="White">
    <NavigationPage.TitleView>
        <Label Text="{Binding Title}"
               TextColor="{StaticResource ColorTextoMenSup}"
               Style="{StaticResource LMenuSup}"/>
    </NavigationPage.TitleView>
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollView Margin="0,0,0,50"
                    x:Name="scroll">
            <StackLayout Padding="0,0,0,50">
                <!--MAPAS Y CARRUSEL DE IMAGENES-->
                <StackLayout Spacing="20"
                             BackgroundColor="White">
                    <ContentView x:Name="ImgCarrusel"
                                 HeightRequest="300"
                                 Padding="0"
                                 Margin="0"
                                 BackgroundColor="White">
                        <CarouselView ItemsSource="{Binding ImagenesCarrusel}"
                                      Loop="False">
                            <CarouselView.ItemTemplate>
                                <DataTemplate>
                                    <ImageButton Source="{Binding ImagenIcon}"
                                                 Aspect="AspectFit"
                                                 Margin="0"
                                                 HorizontalOptions="Fill"
                                                 BackgroundColor="White"
                                                 Command="{Binding BindingContext.PlayImg,Source={x:Reference ImgCarrusel}}"
                                                 CommandParameter="{Binding .}"/>
                                </DataTemplate>
                            </CarouselView.ItemTemplate>
                        </CarouselView>
                    </ContentView>
                </StackLayout>
                <StackLayout Padding="0"
                             Margin="0,10,0,0">
                    <!-- BOTONES -->
                    <StackLayout Orientation="Horizontal"
                                 Spacing="30">
                        <StackLayout Orientation="Horizontal">
                            <StackLayout WidthRequest="80"
                                         HorizontalOptions="Center"
                                         Spacing="0">
                                <ImageButton BackgroundColor="Transparent"
                                             WidthRequest="40"
                                             HeightRequest="40"
                                             Source="{Binding SorurceBtnMapa}"
                                             Command="{Binding MapaCommand}"/>
                                <Label Text="{x:Static resources:AppResources.sitios}"
                                       FontSize="10"
                                       TextColor="{StaticResource TextoGeneral}"
                                       HorizontalTextAlignment="Center"
                                       FontFamily="NotoRegular"/>
                                <BoxView IsVisible="{Binding VerContDetalleMapa}"
                                         HeightRequest="1"
                                         BackgroundColor="{StaticResource TextoGeneral}"
                                         Margin="10,0,10,0"/>
                            </StackLayout>
                            <StackLayout WidthRequest="80"
                                         HorizontalOptions="Center"
                                         Spacing="0"
                                         IsVisible="{Binding VerBtnSitios}">
                                <ImageButton BackgroundColor="Transparent"
                                             WidthRequest="40"
                                             HeightRequest="40"
                                             Source="{Binding SorurceBtnServicios}"
                                             Command="{Binding ServiciosCommand}"/>
                                <Label Text="{x:Static resources:AppResources.servicios}"
                                       FontSize="10"
                                       TextColor="{StaticResource TextoGeneral}"
                                       HorizontalTextAlignment="Center"
                                       FontFamily="NotoRegular"/>
                                <BoxView IsVisible="{Binding VerContServicios}"
                                         HeightRequest="1"
                                         BackgroundColor="{StaticResource TextoGeneral}"
                                         Margin="10,0,10,0"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                    <!-- INFORMACION BASICA - LISTA DE SITIOS -->
                    <StackLayout Padding="20,10,20,0"
                                 BackgroundColor="White"
                                 IsVisible="{Binding VerContDetalleMapa}">
                        <Label Text="{Binding TituloMapa}"
                               FontSize="18"
                               FontFamily="NotoBold"
                               TextColor="{StaticResource TextoGeneral}"/>
                        <Frame CornerRadius="10"
                               BackgroundColor="{StaticResource BordeEntrada}"
                               HasShadow="False"
                               IsVisible="{Binding VerDescrip}">
                            <StackLayout>
                                <Label FontFamily="NotoBold"
                                       Text="{x:Static resources:AppResources.descripcion}"
                                       FontSize="14"
                                       TextColor="{StaticResource TextoGeneral}"
                                       TextTransform="Uppercase"/>
                                <Label Text="{Binding DescripcionM}"
                                       FontSize="14"
                                       TextColor="{StaticResource TextoGeneral}"
                                       FontFamily="NotoRegular"/>
                            </StackLayout>
                        </Frame>
                        <StackLayout Margin="0,15,0,0"
                                     Padding="0,0,0,15"
                                     Spacing="0"
                                     BackgroundColor="White">
                            <Label TextColor="{StaticResource TextoGeneral}"
                                   FontSize="21"
                                   Margin="0,5,0,5"
                                   HorizontalOptions="Start"
                                   FontAttributes="Bold"
                                   Text="{x:Static resources:AppResources.sitios}"/>
                            <StackLayout x:Name="listSitios"
                                         BindableLayout.ItemsSource="{Binding ListaSitios}"
                                         HorizontalOptions="Fill"
                                         VerticalOptions="Start"
                                         BackgroundColor="White"
                                         Spacing="0">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Frame CornerRadius="20"
                                               BackgroundColor="{StaticResource FondoMapa}"
                                               IsClippedToBounds="True"
                                               Padding="2"
                                               Margin="0,3,0,3"
                                               HasShadow="False"
                                               BorderColor="{StaticResource BorderMapa}"
                                               HorizontalOptions="Fill">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding BindingContext.BtnDetalleSitio,Source={x:Reference listSitios}}"
                                                                      CommandParameter="{Binding .}"/>
                                            </Frame.GestureRecognizers>
                                            <Grid Margin="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="16"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0"
                                                       VerticalOptions="Center"
                                                       Padding="5"
                                                       Text="{Binding NombreServicio}"
                                                       TextColor="{StaticResource TextoMapa}"
                                                       FontFamily="NotoRegular"
                                                       FontSize="12">
                                                </Label>
                                                <Image Grid.Column="1"
                                                       Source="ic_siguiente.png"
                                                       HorizontalOptions="End"
                                                       VerticalOptions="Center"
                                                       BackgroundColor="Transparent"
                                                       Margin="0,0,5,0"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                    <!--LISTA DE SERVICIOS -->
                    <StackLayout Padding="20,0,20,0"
                                 BackgroundColor="White"
                                 IsVisible="{Binding VerContServicios}">
                        <Label TextColor="{StaticResource TextoGeneral}"
                               FontSize="21"
                               Margin="0,5,0,5"
                               HorizontalOptions="Start"
                               FontAttributes="Bold"
                               Text="{x:Static resources:AppResources.servicios}"/>
                        <StackLayout x:Name="listServicios"
                                     BindableLayout.ItemsSource="{Binding ListaServicios}"
                                     HorizontalOptions="Fill"
                                     VerticalOptions="Start"
                                     Spacing="0"
                                     BackgroundColor="White">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame CornerRadius="20"
                                           BackgroundColor="{StaticResource FondoMapa}"
                                           IsClippedToBounds="True"
                                           Padding="2"
                                           Margin="0,3,0,3"
                                           HasShadow="False"
                                           BorderColor="{StaticResource BorderMapa}"
                                           HorizontalOptions="Fill">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.BtnDetalleServicio,Source={x:Reference listServicios}}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Frame.GestureRecognizers>
                                        <Grid Margin="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="35"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="16"/>
                                            </Grid.ColumnDefinitions>
                                            <ImageButton Grid.Column="0"
                                                         WidthRequest="25"
                                                         HorizontalOptions="End"
                                                         Source="{Binding IconoPrimero}"
                                                         Command="{Binding BindingContext.BtnDetalleServicio,Source={x:Reference listServicios}}"
                                                         CommandParameter="{Binding .}"
                                                         BackgroundColor="Transparent"/>
                                            <Label Grid.Column="1"
                                                   HorizontalOptions="Fill"
                                                   Text="{Binding NombreServicio}"
                                                   Padding="0"
                                                   Margin="10"
                                                   TextColor="{StaticResource TextoMapa}"
                                                   HorizontalTextAlignment="Start"
                                                   FontSize="12">
                                            </Label>
                                            <Image Grid.Column="2"
                                                   Source="ic_siguiente.png"
                                                   HorizontalOptions="End"
                                                   VerticalOptions="Center"
                                                   BackgroundColor="Transparent"
                                                   Margin="0,0,5,0"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
        <Grid BackgroundColor="{StaticResource FondomMenuInfe}"
              Margin="0,0,0,-60"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              HeightRequest="70">
        </Grid>
        <Grid Grid.Row="0"
              BackgroundColor="{StaticResource FondomMenuInfe}"
              VerticalOptions="End"
              HorizontalOptions="Fill"
              ColumnSpacing="5"
              Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="{Binding GridNotificaciones}"
            BackgroundColor="{StaticResource FondoNotificaMenuInfe}"
            Padding="1"
            CornerRadius="10"
            HasShadow="False"
            BorderColor="{StaticResource BorderNotificaMenuInfe}"
            IsVisible="{Binding VerNotificicaciones}"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="30,0,0,0">
                <Label Text="{Binding CantidadNotificaciones}"
                FontSize="11"
                FontFamily="NotoRegular"
                TextColor="{StaticResource TextNotificaMenuInfe}"
                WidthRequest="20"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"/>
            </Frame>
            <Image x:Name="Menu1"
                   Grid.Column="0"
                   WidthRequest="25"
                   Source="{Binding Icon1}"
                   ClassId="{Binding Icon1Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu1}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu1}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu2"
                   Grid.Column="1"
                   WidthRequest="25"
                   Source="{Binding Icon2}"
                   ClassId="{Binding Icon2Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu2}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu2}"/>
                </Image.GestureRecognizers>
            </Image>
            <BoxView Grid.Column="2"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     WidthRequest="1"
                     HeightRequest="25"
                     Color="Red"/>
            <Image x:Name="Menu3"
                   Grid.Column="3"
                   WidthRequest="25"
                   Source="{Binding Icon3}"
                   ClassId="{Binding Icon3Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu3}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu3}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image x:Name="Menu4"
                   Grid.Column="4"
                   WidthRequest="25"
                   Source="{Binding Icon4}"
                   ClassId="{Binding Icon4Class}"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   IsVisible="{Binding Menu4}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrMenuInferior}"
                                          CommandParameter="{x:Reference Menu4}"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>
        <Frame Grid.Row="0"
               VerticalOptions="End"
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               Padding="0"
               HasShadow="False"
               BorderColor="{StaticResource BordeIconoPrin}"
               BackgroundColor="{StaticResource FondoIconoPrin}"
               CornerRadius="27"
               WidthRequest="58"
               HeightRequest="58">
            <Image Source="{Binding ImagenSplash}"
                   HeightRequest="40"
                   WidthRequest="40"
                   Aspect="AspectFill"
                   Margin="8">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrHome}"/>
                </Image.GestureRecognizers>
            </Image>
        </Frame>
        <Grid BackgroundColor="{StaticResource FondoLoder}"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"
              Margin="-20,-60"
              IsVisible="{Binding IsBusy}">
            <ActivityIndicator IsRunning="true"
                               Color="{StaticResource IconoLoder}"
                               Margin="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>