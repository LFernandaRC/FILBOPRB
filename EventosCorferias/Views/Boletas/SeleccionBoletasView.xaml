                                                   FontFamily="NotoRegular"
                                                   FontSize="12"
                                                   Margin="10,0,0,0"
                                                   HorizontalOptions="Start"
                                                   VerticalOptions="Start"
                                                   Grid.Column="1"
                                                   TextColor="{StaticResource TextoEntrada}"
                                                   PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                                   Placeholder="{x:Static resources:AppResources.codigoPromocional}"
                                                   Text="{Binding EntCodigoPromocional, Mode=TwoWay}"
                                                   Style="{StaticResource ERegistroGeneralTexto}"/>
                                        </Grid>
                                    </Frame>
                                </StackLayout>
                                <StackLayout Spacing="0"
                                             IsVisible="{Binding VerInfoEmpresa , Mode=OneWay}"
                                             x:Name="FEmpr">
