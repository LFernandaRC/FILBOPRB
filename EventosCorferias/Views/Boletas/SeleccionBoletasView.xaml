                           Padding="30,10,30,20"
                           CornerRadius="10"
                           Style="{StaticResource FRegistroGeneral}"
                           BackgroundColor="{StaticResource TextoGeneral}"
                           BorderColor="{StaticResource TextoGeneral}">
