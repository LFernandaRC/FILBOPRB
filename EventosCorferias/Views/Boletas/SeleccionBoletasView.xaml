                                                      FontSize="11"
                                                      FontFamily="NotoSemiBold"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Frame Margin="0"
                                           BorderColor="{StaticResource BordeEntrada}"
                                           BackgroundColor="{StaticResource FondoEntrada}"
                                           Grid.Column="0"
                                           Style="{StaticResource FRegistroGeneral}">
