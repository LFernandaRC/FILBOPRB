<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosCorferias.Views.Usuario.EditarPerfilView"
             xmlns:controls="clr-namespace:EventosCorferias.Controls"
             xmlns:resources="clr-namespace:EventosCorferias.Resources.RecursosIdioma"
             Title="EditarPerfilView"
             BackgroundColor="White">
    <NavigationPage.TitleView>
        <Label Text="{x:Static resources:AppResources.editarPerfil}"
               TextColor="{StaticResource ColorTextoMenSup}"
               Style="{StaticResource LMenuSup}"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="0"
                        BackgroundColor="White"
                        Margin="0,1,0,50">
                <VerticalStackLayout  Padding="0,0,0,50"
                                      Spacing="0"
                                      HorizontalOptions="Fill">
                    <!-- IMAGEN DE PERFIL -->
                    <Grid HorizontalOptions="Center"
                          Margin="0,20,0,0"
                          Grid.ColumnSpan="2"
                          Grid.RowSpan="2"
                          HeightRequest="160"
                          WidthRequest="160"
                          BackgroundColor="Transparent"
                          Padding="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               IsClippedToBounds="true"
                               CornerRadius="80"
                               Margin="0"
                               Padding="-10"
                               IsVisible="{Binding FotoUsuario}"
                               HasShadow="False">
                            <Image Source="{Binding FotoGaleria}"
                                   Aspect="AspectFill"
                                   BackgroundColor="WhiteSmoke"/>
                        </Frame>
                        <ImageButton Source="ic_camara_relleno.png"
                                     HorizontalOptions="End"
                                     VerticalOptions="End"
                                     Margin="0,110,0,0"
                                     WidthRequest="50"
                                     BackgroundColor="Transparent"
                                     Command="{Binding Cambiar_Foto}"/>
                    </Grid>
                    <!-- FORMULARIO REGISTRO PERSONA -->
                    <StackLayout Padding="15,15,15,0">
                        <Label FontSize="11"
                               TextColor="{StaticResource TextoEntrada}"
                               HorizontalOptions="Start"
                               Margin="1,0,15,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.2"
                                          Text="{x:Static resources:AppResources.nombreCompleto}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                    <Span LineHeight="1.2"
                                          Text="*"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               Style="{StaticResource FRegistroGeneral}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_perfil_obscuro.png"
                                       WidthRequest="20"
                                       Margin="10,0,5,0"
                                       HorizontalOptions="Start"/>
                                <Entry HeightRequest="35"
                                       FontFamily="NotoRegular"
                                       Grid.Column="1"
                                       TextColor="{StaticResource TextoEntrada}"
                                       Placeholder="{x:Static resources:AppResources.usuario}"
                                       PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                       Text="{Binding EntNombreUsu}"
                                       Style="{StaticResource ERegistroGeneralTexto}"/>
                            </Grid>
                        </Frame>
                        <!-- INDENTIFICACION BLOQUEADA-->
                        <Label IsVisible="{Binding VerIdentificacionBloq}"
                               FontSize="11"
                               TextColor="{StaticResource TextoEntrada}"
                               HorizontalOptions="Start"
                               Margin="1,15,15,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.2"
                                          Text="{x:Static resources:AppResources.tiponNumeroIdentificacion}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                    <Span LineHeight="1.2"
                                          Text="*"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Grid IsVisible="{Binding VerIdentificacionBloq}"
                              ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Frame BorderColor="{StaticResource BordeEntrada}"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   Grid.Column="0"
                                   Style="{StaticResource FRegistroGeneral}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0"
                                           Source="ic_identificacion_obscuro.png"
                                           WidthRequest="20"
                                           Margin="10,0,0,0"
                                           HorizontalOptions="Start"/>
                                    <Label TextColor="{StaticResource PlaceHolderEntrada}"
                                           FontFamily="NotoRegular"
                                           IsEnabled="False"
                                           FontSize="12"
                                           Grid.Column="1"
                                           Margin="0,7,20,0"
                                           BackgroundColor="Transparent"
                                           WidthRequest="60"
                                           Text="{Binding EnTipoIdUsuS}"
                                           VerticalOptions="Start"/>
                                </Grid>
                            </Frame>
                            <Frame BorderColor="{StaticResource BordeEntrada}"
                                   BackgroundColor="{StaticResource FondoEntrada}"
                                   Padding="10"
                                   Style="{StaticResource FRegistroGeneral}"
                                   Grid.Column="1"
                                   HasShadow="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label TextColor="{StaticResource PlaceHolderEntrada}"
                                           FontFamily="NotoRegular"
                                           IsEnabled="False"
                                           FontSize="12"
                                           Grid.Column="0"
                                           VerticalOptions="Start"
                                           Margin="60,0,5,0"
                                           BackgroundColor="Transparent"
                                           WidthRequest="250"
                                           Text="{Binding EntIdUsu}"/>
                                </Grid>
                            </Frame>
                        </Grid>
                        <!-- INDENTIFICACION DESBLOQUEADA-->
                        <Grid Margin="1,15,0,0"
                              ColumnSpacing="10"
                              IsVisible="{Binding VerIdentificacionDesBloq}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Column="0">
                                <Label FontSize="11"
                                       TextColor="{StaticResource TextoEntrada}"
                                       HorizontalOptions="Start"
                                       Margin="1,15,15,0">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span LineHeight="1.2"
                                                  Text="{x:Static resources:AppResources.tipoDocumento}"
                                                  FontSize="11"
                                                  FontFamily="NotoSemiBold"/>
                                            <Span LineHeight="1.2"
                                                  Text="*"
                                                  TextColor="{StaticResource TextoEntrada}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Frame BorderColor="{StaticResource BordeEntrada}"
                                       BackgroundColor="{StaticResource FondoEntrada}"
                                       Style="{StaticResource FRegistroGeneral}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0"
                                             Source="ic_identificacion_obscuro.png"
                                             WidthRequest="20"
                                             Margin="10,0,5,0"
                                             HorizontalOptions="Start"/>
                                        <Picker HeightRequest="35"
                                                Grid.Column="1"
                                                FontSize="12"
                                                FontFamily="NotoRegular"
                                                Title="{x:Static resources:AppResources.seleccionar}"
                                                TitleColor="{StaticResource PlaceHolderEntrada}"
                                                TextColor="{StaticResource TextoEntrada}"
                                                Margin="0,0,5,0"
                                                BackgroundColor="Transparent"
                                                ItemsSource="{Binding ListaTipoIdUsu, Mode=TwoWay}"
                                                ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                                SelectedItem="{Binding SelecttipoDocumento}"/>
                                    </Grid>
                                </Frame>
                            </StackLayout>
                            <StackLayout Grid.Column="1">
                                <Label FontSize="11"
                                       TextColor="{StaticResource TextoEntrada}"
                                       HorizontalOptions="Start"
                                       Margin="1,15,15,0">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span LineHeight="1.2"
                                                  Text="{x:Static resources:AppResources.NumeroDocumento}"
                                                  FontSize="11"
                                                  FontFamily="NotoSemiBold"/>
                                            <Span LineHeight="1.2"
                                                  Text="*"
                                                  TextColor="{StaticResource TextoEntrada}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <Frame BorderColor="{StaticResource BordeEntrada}"
                                       BackgroundColor="{StaticResource FondoEntrada}"
                                       Style="{StaticResource FRegistroGeneral}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0"
                                               Source="ic_identificacion_obscuro.png"
                                               WidthRequest="20"
                                               Margin="10,0,5,0"
                                               HorizontalOptions="Start"/>
                                        <Entry HeightRequest="35"
                                               FontFamily="NotoRegular"
                                               MaxLength="50"
                                               Margin="0,0,0,0"
                                               HorizontalOptions="Start"
                                               HorizontalTextAlignment="Start"
                                               Grid.Column="1"
                                               TextColor="{StaticResource TextoEntrada}"
                                               Placeholder="{x:Static resources:AppResources.Identificacion}"
                                               PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                               Text="{Binding EntIdentificacio, Mode=TwoWay}"
                                               Style="{StaticResource ERegistroGeneralTextoNumerico}"/>
                                    </Grid>
                                </Frame>
                            </StackLayout>
                        </Grid>
                        <!--FIN IDENTIFICACION-->
                        <!-- CORREO DESBLOQUEADO-->
                        <Grid IsVisible="{Binding VerCorreoDesBloq}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Label FontSize="11"
                                   TextColor="{StaticResource TextoEntrada}"
                                   Grid.Column="0"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"
                                   Margin="1,15,15,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span LineHeight="1.2"
                                              Text="{x:Static resources:AppResources.correoElectronico}"
                                              FontSize="11"
                                              FontFamily="NotoSemiBold"/>
                                        <Span LineHeight="1.2"
                                              Text="*"
                                              TextColor="{StaticResource TextoEntrada}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <ImageButton Source="ic_admiracion_obscuro.png"
                                         WidthRequest="20"
                                         Margin="0,15,0,0"
                                         Grid.Column="1"
                                         BackgroundColor="Transparent"
                                         Command="{Binding Notificacion_correo}"/>
                        </Grid>
                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               IsVisible="{Binding VerCorreoDesBloq}"
                               Style="{StaticResource FRegistroGeneral}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_correo_obscuro.png"
                                       WidthRequest="20"
                                       Margin="10,0,5,0"
                                       HorizontalOptions="Start"/>
                                <Entry HeightRequest="35"
                                       FontFamily="NotoRegular"
                                       Grid.Column="1"
                                       TextColor="{StaticResource TextoEntrada}"
                                       Placeholder="{x:Static resources:AppResources.correoElectronico}"
                                       PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                       Text="{Binding EntCorreo, Mode=TwoWay}"
                                       Style="{StaticResource ERegistroGeneralTexto}"/>
                            </Grid>
                        </Frame>
                        <!--CORREO BLOQUEADO -->
                        <Label IsVisible="{Binding VerCorreoBloq}"
                               FontSize="11"
                               TextColor="{StaticResource TextoEntrada}"
                               HorizontalOptions="Start"
                               Margin="1,15,15,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.2"
                                          Text="{x:Static resources:AppResources.correoElectronico}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                    <Span LineHeight="1.2"
                                          Text="*"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               IsVisible="{Binding VerCorreoBloq}"
                               Margin="0"
                               Padding="10"
                               Style="{StaticResource FRegistroGeneral}"
                               Grid.Column="0"
                               HasShadow="False">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_correo_obscuro.png"
                                       WidthRequest="20"
                                       Margin="0,0,5,0"
                                       HorizontalOptions="Start"/>
                                <Label TextColor="{StaticResource PlaceHolderEntrada}"
                                       FontFamily="NotoRegular"
                                       IsEnabled="False"
                                       FontSize="12"
                                       Grid.Column="1"
                                       VerticalOptions="Center"
                                       Margin="0,0,5,0"
                                       BackgroundColor="Transparent"
                                       WidthRequest="250"
                                       Text="{Binding EntCorreoUsu}"/>
                            </Grid>
                        </Frame>
                        <!-- FIN CORREO -->

                        <Label FontSize="11"
                               TextColor="{StaticResource TextoEntrada}"
                               HorizontalOptions="Start"
                               Margin="1,15,15,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.2"
                                          Text="{x:Static resources:AppResources.telefonoCelular}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               Style="{StaticResource FRegistroGeneral}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_telefono_obscuro.png"
                                       WidthRequest="20"
                                       Margin="10,0,5,0"
                                       HorizontalOptions="Start"/>
                                <Entry HeightRequest="35"
                                       FontFamily="NotoRegular"
                                       Grid.Column="1"
                                       TextColor="{StaticResource TextoEntrada}"
                                       Placeholder="{x:Static resources:AppResources.telefonoCelular}"
                                       PlaceholderColor="{StaticResource PlaceHolderEntrada}"
                                       Text="{Binding EntCelularUsu, Mode=TwoWay}"
                                       Style="{StaticResource ERegistroGeneralTextoNumerico}"/>
                            </Grid>
                        </Frame>

                        <Label FontSize="11"
                               TextColor="{StaticResource TextoEntrada}"
                               HorizontalOptions="Start"
                               Margin="1,15,15,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.2"
                                          Text="{x:Static resources:AppResources.fechaNacimiento}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                    <Span LineHeight="1.2"
                                          Text="*"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               Style="{StaticResource FRegistroGeneral}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_calendario_obscuro.png"
                                       WidthRequest="20"
                                       Margin="10,0,5,0"
                                       HorizontalOptions="Start"/>
                                <DatePicker Grid.Column="1"
                                            FontSize="12"
                                            Margin="0,0,5,0"
                                            BackgroundColor="Transparent"
                                            WidthRequest="250"
                                            Format="dd/MM/yyyy"
                                            HeightRequest="35"
                                            TextColor="{StaticResource TextoEntrada}"
                                            Date="{Binding EntFechaNacimientoUsu, Mode=TwoWay}"/>
                            </Grid>
                        </Frame>

                        <Label FontSize="11"
                               TextColor="{StaticResource TextoEntrada}"
                               HorizontalOptions="Start"
                               Margin="1,15,15,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.2"
                                          Text="{x:Static resources:AppResources.ciudadRecinto}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                    <Span LineHeight="1.2"
                                          Text="*"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               Style="{StaticResource FRegistroGeneral}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_pin_obscuro.png"
                                       WidthRequest="20"
                                       Margin="10,0,5,0"
                                       HorizontalOptions="Start"/>

                                <Picker HeightRequest="35"
                                        Grid.Column="1"
                                        FontSize="12"
                                        FontFamily="NotoRegular"
                                        Title="{x:Static resources:AppResources.seleccionar}"
                                        TitleColor="{StaticResource PlaceHolderEntrada}"
                                        TextColor="{StaticResource TextoEntrada}"
                                        Margin="0,0,5,0"
                                        BackgroundColor="Transparent"
                                        WidthRequest="250"
                                        ItemsSource="{Binding ListaCiudadRecintoUsu, Mode=TwoWay}"
                                        ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                        SelectedItem="{Binding SelectCiudadUsu}"
                                        SelectedIndex="{Binding SelectIndexCiudad}"/>
                            </Grid>
                        </Frame>

                        <Label FontSize="11"
                               TextColor="{StaticResource TextoEntrada}"
                               HorizontalOptions="Start"
                               Margin="1,15,15,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.2"
                                          Text="{x:Static resources:AppResources.paisResidencia}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                    <Span LineHeight="1.2"
                                          Text="*"
                                          TextColor="{StaticResource TextoEntrada}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               Style="{StaticResource FRegistroGeneral}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_pais_obscuro.png"
                                       WidthRequest="20"
                                       Margin="10,0,5,0"
                                       HorizontalOptions="Start"/>

                                <Picker HeightRequest="35"
                                        Grid.Column="1"
                                        FontSize="12"
                                        FontFamily="NotoRegular"
                                        Title="{x:Static resources:AppResources.seleccionar}"
                                        TitleColor="{StaticResource PlaceHolderEntrada}"
                                        TextColor="{StaticResource TextoEntrada}"
                                        Margin="0,0,5,0"
                                        BackgroundColor="Transparent"
                                        WidthRequest="250"
                                        ItemsSource="{Binding ListaPaisUsu, Mode=TwoWay}"
                                        ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                        SelectedItem="{Binding SelectPaisUsu}"
                                        SelectedIndex="{Binding SelectIndexPais}"/>
                            </Grid>
                        </Frame>

                        <Label FontSize="11"
                               TextColor="{StaticResource TextoEntrada}"
                               HorizontalOptions="Start"
                               Margin="1,15,15,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.2"
                                          Text="{x:Static resources:AppResources.sectorEconomico}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               Style="{StaticResource FRegistroGeneral}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_portafolio_obscuro.png"
                                       WidthRequest="20"
                                       Margin="10,0,5,0"
                                       HorizontalOptions="Start"/>

                                <Picker HeightRequest="35"
                                        Grid.Column="1"
                                        FontSize="12"
                                        FontFamily="NotoRegular"
                                        Title="{x:Static resources:AppResources.seleccionar}"
                                        TitleColor="{StaticResource PlaceHolderEntrada}"
                                        TextColor="{StaticResource TextoEntrada}"
                                        Margin="0,0,5,0"
                                        BackgroundColor="Transparent"
                                        WidthRequest="250"
                                        ItemsSource="{Binding ListaSectorEcoUsu, Mode=TwoWay}"
                                        ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                        SelectedItem="{Binding SelectSectorEcoUsu}"
                                        SelectedIndex="{Binding SelectIndexSector}"/>
                            </Grid>
                        </Frame>

                        <Label FontSize="11"
                               TextColor="{StaticResource TextoEntrada}"
                               HorizontalOptions="Start"
                               Margin="1,15,15,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.2"
                                          Text="{x:Static resources:AppResources.profesion}"
                                          FontSize="11"
                                          FontFamily="NotoSemiBold"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame BorderColor="{StaticResource BordeEntrada}"
                               BackgroundColor="{StaticResource FondoEntrada}"
                               Style="{StaticResource FRegistroGeneral}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="ic_profesion_obscuro.png"
                                       WidthRequest="20"
                                       Margin="10,0,5,0"
                                       HorizontalOptions="Start"/>

                                <Picker HeightRequest="35"
                                        Grid.Column="1"
                                        FontSize="12"
                                        FontFamily="NotoRegular"
                                        Title="{x:Static resources:AppResources.seleccionar}"
                                        TitleColor="{StaticResource PlaceHolderEntrada}"
                                        TextColor="{StaticResource TextoEntrada}"
                                        Margin="0,0,5,0"
                                        BackgroundColor="Transparent"
                                        WidthRequest="250"
                                        ItemsSource="{Binding ListaProfesionUsu,  Mode=TwoWay}"
                                        ItemDisplayBinding="{Binding Descripcion, Mode=TwoWay}"
                                        SelectedItem="{Binding SelectProfesionUsu}"
                                        SelectedIndex="{Binding SelectIndexProfesion}"/>
                            </Grid>
                        </Frame>
                        <Grid Margin="10"
                              Padding="0,15,15,10"
                              HorizontalOptions="Start"
                              ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="18"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                   Source="ic_login_obscuro.png"/>
                            <Label Grid.Column="1"
                                   FontSize="15"
                                   FontFamily="NotoSemiBold"
                                   TextColor="{StaticResource TextoEntrada}"
                                   Text="{x:Static resources:AppResources.cuentasVinculadas}"/>
                        </Grid>

                        <Grid Margin="5,0,0,0"
                              Padding="0,0,0,0"
                              ColumnSpacing="0"
                              BackgroundColor="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                   Source="ic_arroba_relleno.png"
                                   WidthRequest="30"
                                   Margin="0,0,5,0"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="{Binding EntCorreoUsu}"
                                   FontSize="15"
                                   Margin="0,0,0,0"
                                   FontFamily="NotoSemiBold"
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource TextoEntrada}"/>
                            <ImageButton Grid.Column="2"
                                         Source="ic_admiracion_obscuro.png"
                                         WidthRequest="20"
                                         Margin="0,0,0,0"
                                         HorizontalOptions="End"
                                         VerticalOptions="Center"
